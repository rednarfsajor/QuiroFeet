@model Analisis.Models.OrdenCompraViewModel
@using Analisis.BD

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear nueva orden de compra";

    if (Model?.Productos == null || !Model.Productos.Any())
    {
        Model.Productos = new List<Analisis.Models.DetalleOrdenVM> { new Analisis.Models.DetalleOrdenVM() };
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="qf-page-header">
    <div>
        <h1 class="qf-page-title">
            <i class="bi bi-file-earmark-plus-fill"></i> Crear orden de compra
        </h1>
        <p class="qf-page-subtitle">
            Registra una nueva orden de compra asociando proveedor, productos y cantidades.
        </p>
    </div>

    <div class="qf-gap-1">
        <a href="@Url.Action("ListarOrdenes", "OrdenCompra")" class="qf-btn qf-btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al listado
        </a>
    </div>
</div>

<div class="qf-form-wrapper">
    <div class="qf-form-card">
        <div class="qf-form-layout">
            <!-- PANEL LATERAL -->
            <div class="qf-form-side">
                <div class="qf-form-side-icon">
                    <i class="bi bi-bag-check-fill"></i>
                </div>
                <h2>Datos de la orden</h2>
                <p>
                    Crea órdenes de compra para mantener el inventario al día y controlar las entradas
                    de productos por proveedor.
                </p>

                <ul>
                    <li><i class="bi bi-check-circle-fill"></i> Selecciona el proveedor correspondiente.</li>
                    <li><i class="bi bi-check-circle-fill"></i> Agrega uno o varios productos con su cantidad.</li>
                    <li><i class="bi bi-check-circle-fill"></i> El total se calcula automáticamente.</li>
                </ul>
            </div>

            <!-- FORMULARIO PRINCIPAL -->
            <div class="qf-form-main">
                @using (Html.BeginForm("CrearOrdenCompra", "OrdenCompra", FormMethod.Post, new { @class = "qf-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "qf-validation-summary" })

                    <div class="qf-form-grid">
                        <!-- PROVEEDOR -->
                        <div class="qf-form-group">
                            @Html.LabelFor(m => m.proveedor_id, "Proveedor", new { @class = "qf-form-label" })
                            @Html.DropDownListFor(
                                m => m.proveedor_id,
                                (SelectList)ViewBag.Proveedores,
                                "-- Seleccione --",
                                new { @class = "qf-form-control", required = "required", id = "proveedor-select" }
                            )
                            @Html.ValidationMessageFor(m => m.proveedor_id, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- FECHA CREACIÓN -->
                        <div class="qf-form-group">
                            <label class="qf-form-label">Fecha de creación</label>
                            <input type="text"
                                   class="qf-form-control"
                                   value="@Model.fecha_creacion.ToString("dd/MM/yyyy HH:mm")"
                                   readonly />
                        </div>
                    </div>

                    <div class="qf-products-header">
                        <h3><i class="bi bi-box-seam-fill"></i> Productos incluidos</h3>
                        <p>Agrega los productos que deseas solicitar en esta orden de compra.</p>
                    </div>

                    <div id="productos-container" class="qf-products-list">
                        @for (int i = 0; i < Model.Productos.Count; i++)
                        {
                            var precio = Model.Productos[i].precio ?? "0.00";
                            <div class="producto-row">
                                <div class="qf-product-grid">
                                    <div class="qf-form-group">
                                        <label class="qf-form-label">Producto</label>
                                        <select name="Productos[@i].id_producto"
                                                class="qf-form-control producto-select"
                                                required>
                                            <option value="">-- Seleccione un producto --</option>
                                        </select>
                                        @Html.ValidationMessage($"Productos[{i}].id_producto", "", new { @class = "qf-field-error" })
                                    </div>

                                    <div class="qf-form-group">
                                        <label class="qf-form-label">Cantidad</label>
                                        <input type="number"
                                               name="Productos[@i].qty"
                                               class="qf-form-control"
                                               min="1"
                                               value="@Model.Productos[i].qty"
                                               required />
                                        @Html.ValidationMessage($"Productos[{i}].qty", "", new { @class = "qf-field-error" })
                                    </div>

                                    <div class="qf-form-group">
                                        <label class="qf-form-label">Precio unitario</label>
                                        <input type="text"
                                               class="qf-form-control precio-mostrado"
                                               value="@precio"
                                               readonly />
                                        <input type="hidden"
                                               name="Productos[@i].precio"
                                               class="precio-real"
                                               value="@precio" />
                                        @Html.ValidationMessage($"Productos[{i}].precio", "", new { @class = "qf-field-error" })
                                    </div>

                                    <div class="qf-form-group qf-product-remove">
                                        <button type="button"
                                                class="qf-btn qf-btn-danger qf-btn-icon btn-remove"
                                                title="Eliminar fila">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <button type="button" id="add-product-btn" class="qf-btn qf-btn-secondary qf-btn-with-icon">
                        <i class="bi bi-plus-circle"></i> Agregar producto
                    </button>

                    <div class="orden-total-box">
                        Total general: <span id="totalGeneral">₡0.00</span>
                    </div>

                    <div class="qf-form-actions">
                        <button type="submit" class="qf-btn qf-btn-primary">
                            <i class="bi bi-save"></i> Guardar orden
                        </button>
                        <a href="@Url.Action("ListarOrdenes", "OrdenCompra")" class="qf-btn qf-btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

