@model IEnumerable<Analisis.BD.OrdenesCompra>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listado de Órdenes de Compra";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="ordenes-container">
    <h2><i class="bi bi-list-check"></i> @ViewBag.Title</h2>

    @if (!Model.Any())
    {
        <div class="mensaje-vacio">
            <i class="bi bi-info-circle-fill me-2"></i> No se encontraron órdenes de compra.
        </div>
    }
    else
    {
        <table class="ordenes-tabla">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Proveedor</th>
                    <th>Fecha y Hora</th>
                    <th>Estado</th>
                    <th>Total (₡)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orden in Model)
                {
                    <tr>
                        <td>@orden.id_orden</td>
                        <td>@orden.Proveedores.nombre</td>
                        <td>@orden.fecha_creacion.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@orden.status</td>
                        <td>₡@(orden.total.HasValue ? orden.total.Value.ToString("N2") : "0.00")</td>
                        <td class="acciones">
                            <a href="@Url.Action("DetallesOrdenCompra","OrdenCompra", new { id = orden.id_orden })" class="btn-ver" title="Ver Detalles">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a href="@Url.Action("EditarOrdenCompra","OrdenCompra", new { id = orden.id_orden })" class="btn-editar" title="Editar Orden">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="@Url.Action("EliminarOrdenCompra","OrdenCompra", new { id = orden.id_orden })" class="btn-eliminar" title="Eliminar Orden">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Estilos -->
<style>
    .ordenes-container {
        max-width: 1100px;
        margin: 50px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
        font-family: 'Segoe UI', sans-serif;
        color: #234449;
    }

    h2 {
        text-align: center;
        font-size: 2.2em;
        margin-bottom: 25px;
        color: #234449;
    }

    .mensaje-vacio {
        text-align: center;
        background: #ffe6e6;
        color: #b02a37;
        padding: 20px;
        font-size: 1.2em;
        border-radius: 10px;
        margin-top: 20px;
    }

    .ordenes-tabla {
        width: 100%;
        border-collapse: collapse;
        margin-top: 30px;
    }

        .ordenes-tabla th,
        .ordenes-tabla td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
            text-align: center;
        }

        .ordenes-tabla thead {
            background-color: #234449;
            color: white;
        }

    .acciones {
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .btn-ver,
    .btn-editar,
    .btn-eliminar {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 8px;
        font-size: 1.1em;
        color: white;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

    .btn-ver {
        background-color: #3e77f8;
    }

        .btn-ver:hover {
            background-color: #234449;
        }

    .btn-editar {
        background-color: #3e77f8;
    }

        .btn-editar:hover {
            background-color: #234449;
        }

    .btn-eliminar {
        background-color: #b02a37;
    }

        .btn-eliminar:hover {
            background-color: #7a1c24;
        }
</style>
