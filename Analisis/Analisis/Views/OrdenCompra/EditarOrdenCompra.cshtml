@model Analisis.BD.OrdenesCompra

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = $"Editar Orden #{Model.id_orden}";

    // Opciones de estado (texto vs valor que se guarda)
    var estados = new List<SelectListItem>
{
        new SelectListItem
        {
            Text = "Pendiente",
            Value = "Pendiente",
            Selected = string.Equals(Model.status, "Pendiente", StringComparison.OrdinalIgnoreCase)
        },
        new SelectListItem
        {
            // El usuario ve "Recibida",
            // pero internamente se sigue usando "Procesada"
            Text = "Recibida",
            Value = "Procesada",
            Selected = string.Equals(Model.status, "Procesada", StringComparison.OrdinalIgnoreCase)
                      || string.Equals(Model.status, "Recibida", StringComparison.OrdinalIgnoreCase)
        },
        new SelectListItem
        {
            Text = "Cancelada",
            Value = "Cancelada",
            Selected = string.Equals(Model.status, "Cancelada", StringComparison.OrdinalIgnoreCase)
        }
    };
}

<div class="qf-page-header">
    <div>
        <h1 class="qf-page-title">
            <i class="bi bi-pencil-square"></i> Editar orden de compra
        </h1>
        <p class="qf-page-subtitle">
            Actualiza los datos de la orden registrada en QuiroFeet.
        </p>
    </div>
</div>

<div class="qf-form-wrapper">
    <div class="qf-form-card qf-wide">
        <div class="qf-form-card-header">
            <div>
                <h2>Datos de la orden</h2>
                <p>Modifica solo los campos necesarios y guarda los cambios.</p>
            </div>
        </div>

        @using (Html.BeginForm("EditarOrdenCompra", "OrdenCompra", FormMethod.Post, new { @class = "qf-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.id_orden)

            @Html.ValidationSummary(true, "", new { @class = "qf-validation-summary" })

            <div class="qf-form-grid qf-grid-wide">

                <!-- Proveedor -->
                <div class="qf-form-group">
                    <label class="qf-form-label" for="proveedor_id">Proveedor</label>
                    @Html.DropDownListFor(m => m.proveedor_id,
                        (SelectList)ViewBag.proveedor_id,
                        "-- Seleccione --",
                        new { @class = "qf-form-control qf-input-big", required = "required" })
                </div>

                <!-- Fecha creación (solo lectura) -->
                <div class="qf-form-group">
                    <label class="qf-form-label">Fecha de creación</label>
                    <input type="text"
                           class="qf-form-control qf-input-big"
                           value="@(Model.fecha_creacion.ToString("dd/MM/yyyy HH:mm"))"
                           readonly />
                </div>

                <!-- Fecha recepción (editable) -->
                <div class="qf-form-group">
                    <label class="qf-form-label" for="fecha_recepcion">Fecha de recepción</label>
                    <input type="date"
                           name="fecha_recepcion"
                           id="fecha_recepcion"
                           class="qf-form-control qf-input-big"
                           value="@(Model.fecha_recepcion.HasValue ? Model.fecha_recepcion.Value.ToString("yyyy-MM-dd") : "")" />
                </div>

                <!-- Estado (DROPDOWN) -->
                <div class="qf-form-group">
                    <label class="qf-form-label" for="status">Estado</label>
                    @Html.DropDownListFor(m => m.status,
                        estados,
                        "-- Seleccione estado --",
                        new { @class = "qf-form-control qf-input-big", required = "required" })
                    @Html.ValidationMessageFor(m => m.status, "", new { @class = "qf-field-error" })
                </div>

            </div>

            <div class="qf-form-actions">
                <button type="submit" class="qf-btn qf-btn-primary">
                    <i class="bi bi-check-lg"></i> Guardar cambios
                </button>

                <a href="@Url.Action("ListarOrdenes", "OrdenCompra")" class="qf-btn qf-btn-secondary">
                    <i class="bi bi-x-lg"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

@* Detalle de productos *@
<div class="qf-form-wrapper" style="margin-top: 1.8rem;">
    <div class="qf-form-card qf-wide">
        <div class="qf-form-card-header">
            <div>
                <h2>Detalle de productos</h2>
                <p>Resumen de los productos incluidos en esta orden.</p>
            </div>
        </div>

        <div class="qf-table-wrapper">
            <table class="qf-table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in (IEnumerable<dynamic>)ViewBag.Detalles)
                    {
                        <tr>
                            <td>@d.NombreProducto</td>
                            <td>@d.Cantidad</td>
                            <td>₡@String.Format("{0:N2}", (decimal)d.PrecioUnidad)</td>
                            <td>₡@String.Format("{0:N2}", (decimal)d.Subtotal)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles{
