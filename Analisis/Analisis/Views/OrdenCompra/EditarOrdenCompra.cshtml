            color: #6B7280;
            font-size: .95rem;
        }

        /* ===== WRAPPER / CARD ===== */
        .qf-form-wrapper {
            display: flex;
            justify-content: center;
        }

        .qf-form-card {
            background: #ffffff;
            border-radius: 22px;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.10);
            padding: 2.2rem 2.6rem 2rem;
            width: 100%;
            max-width: 960px;
        }

            .qf-form-card.qf-wide {
                max-width: 1150px;
            }

        .qf-form-card-header {
            margin-bottom: 1.4rem;
            border-bottom: 1px solid #E5E7EB;
            padding-bottom: 0.8rem;
        }

            .qf-form-card-header h2 {
                font-size: 1.25rem;
                margin: 0;
                color: #234449;
            }

            .qf-form-card-header p {
                margin: .2rem 0 0;
                color: #6B7280;
                font-size: .9rem;
            }

        .qf-form {
            width: 100%;
        }

        .qf-validation-summary {
            margin-bottom: 1rem;
            padding: .7rem .9rem;
            border-radius: 10px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #b91c1c;
            font-size: .85rem;
        }

        /* ===== GRID ===== */
        .qf-form-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.4rem 2.2rem;
        }

        .qf-grid-wide {
            gap: 1.7rem 3rem;
        }

        .qf-form-group {
            display: flex;
            flex-direction: column;
            gap: .3rem;
        }

        .qf-form-label {
            font-size: .86rem;
            font-weight: 600;
            color: #4B5563;
        }

        .qf-form-control {
            width: 100%;
            padding: .65rem .85rem;
            border-radius: 10px;
            border: 1px solid #D1D5DB;
            font-size: .92rem;
            outline: none;
        }

        .qf-input-big {
            padding: .85rem 1rem;
            font-size: 1.02rem;
        }

        .qf-form-control:focus {
            border-color: #0FC57C;
            box-shadow: 0 0 0 1px rgba(15, 197, 124, 0.25);
        }

        .qf-field-error {
            font-size: .8rem;
            color: #dc2626;
        }

        /* ===== ACCIONES ===== */
        .qf-form-actions {
            margin-top: 1.9rem;
            display: flex;
            justify-content: flex-end;
            gap: .8rem;
            flex-wrap: wrap;
        }

        /* ===== BOTONES ===== */
        .qf-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: .35rem;
            padding: .5rem 1.2rem;
            border-radius: 999px;
            border: none;
            font-size: .9rem;
            cursor: pointer;
            text-decoration: none;
            font-weight: 500;
            transition: background .15s, transform .1s, box-shadow .15s;
        }

        .qf-btn-primary {
            background: #0FC57C;
            color: #ffffff;
            box-shadow: 0 4px 10px rgba(15, 197, 124, 0.35);
        }

            .qf-btn-primary:hover {
                background: #0aa164;
                transform: translateY(-1px);
            }

        .qf-btn-secondary {
            background: #E5E7EB;
            color: #234449;
        }

            .qf-btn-secondary:hover {
                background: #d1d5db;
            }

        /* ===== TABLA DETALLE ===== */
        .qf-table-wrapper {
            width: 100%;
            overflow-x: auto;
        }

        .qf-table {
            width: 100%;
            border-collapse: collapse;
            font-size: .9rem;
        }

            .qf-table thead tr {
                background: #234449;
                color: #ffffff;
            }

            .qf-table th,
            .qf-table td {
                padding: .75rem 1rem;
                text-align: left;
                border-bottom: 1px solid #E5E7EB;
            }

            .qf-table tbody tr:nth-child(odd) {
                background: #F9FAFB;
            }

            .qf-table tbody tr:hover {
                background: #ECFEF3;
            }

        @@media (max-width: 768px) {
            .qf-form-card {
                padding: 1.5rem 1.25rem;
            }

            .qf-form-grid {
                grid-template-columns: 1fr;
            }

            .qf-form-actions {
                justify-content: flex-start;
            }
        }
    </style>
}
