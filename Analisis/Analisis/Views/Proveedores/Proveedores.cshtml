@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Proveedores";
}

<div class="receipts-container" style="font-family: 'Poppins', sans-serif;">
    <h1>Gestión de Proveedores</h1>
    <p>Seleccione una opción para continuar.</p>

    <div class="options">
        <!-- Botón para Crear Prov -->
        <a href="@Url.Action("RegistrarProveedor", "Proveedores")" class="option-card">
            <i class="bi bi-person-fill-add"></i>
            <h3>Registrar Proveedor</h3>
            <p>Ingresar nuevos proveedores en el sistema</p>
        </a>

        <!-- Botón para Ver Prov -->
        <a href="@Url.Action("DetallesProveedor", "Proveedores")" class="option-card">
            <i class="bi bi-people-fill"></i>
            <h3>Ver Proveedores</h3>
            <p>Consultar el listado de Proveedores</p>
        </a>
    </div>
</div>

<style>
    .receipts-container {
        max-width: 900px;
        margin: 80px auto;
        text-align: center;
        padding: 20px;
    }

    h1 {
        color: #234449;
        font-size: 2.5em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 40px;
    }

    .options {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
    }

    .option-card {
        width: 280px;
        background-color: #ffffff;
        padding: 35px 30px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #234449;
        transition: transform 0.3s, background-color 0.3s;
    }

        .option-card:hover {
            transform: translateY(-10px);
            background-color: #f0f6ff;
        }

        .option-card i {
            font-size: 3.2em;
            color: #3e77f8;
            margin-bottom: 20px;
        }

    h3 {
        margin-bottom: 10px;
        font-size: 1.5em;
    }
</style>


