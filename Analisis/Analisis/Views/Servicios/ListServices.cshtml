@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Servicios";
}

<div class="container">
    <h1>Servicios Registrados</h1>
    <p>Reporte del listado de clientes</p>

    <!-- Tabla de Service -->
    <table class="user-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Especialidad</th>
                <th>Profesional</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Ejemplo de Datos Simulados -->
            <tr>
                <td>1</td>
                <td>Servicio 1</td>
                <td>Atención estandar</td>
                <td>Diego Hugo Cortez</td>
                <td>
                    <a href="@Url.Action("EditService", "Servicios")" class="btn-edit">Editar</a>
                    <a href="@Url.Action("ListServices", "Servicios")" class="btn-delete">Eliminar</a>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>Servicio 2</td>
                <td>Atención especial</td>
                <td>Alicia Mendez</td>
                <td>
                    <a href="@Url.Action("EditService", "Servicios")" class="btn-edit">Editar</a>
                    <a href="@Url.Action("ListServices", "Servicios")" class="btn-delete">Eliminar</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 900px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .user-table th, .user-table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        .user-table th {
            background-color: #234449;
            color: white;
        }

    .btn-edit {
        background-color: #3e77f8;
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 8px;
        text-decoration: none;
        margin-right: 5px;
    }

    .btn-delete {
        background-color: #e74c3c;
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 8px;
        text-decoration: none;
    }

    .btn-edit:hover {
        background-color: #234449;
    }

    .btn-delete:hover {
        background-color: #c0392b;
    }
</style>

