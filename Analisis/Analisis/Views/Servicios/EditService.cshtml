@model Analisis.BD.Servicios
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Servicio";
}

<div class="container">
    <h1>Editar Servicio</h1>
    <p>Modifica la información del servicio</p>

    @using (Html.BeginForm("EditService", "Servicios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre del servicio", required = "required" })
        </div>

        <div class="form-group">
            <label>Descripción</label>
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", placeholder = "Ingrese la descripción del servicio", required = "required" })
        </div>

        <div class="form-group">
            <label>Duración</label>
            @Html.TextBoxFor(m => m.Duracion, new { @class = "form-control", placeholder = "Ingrese la duración (Ej: 1 hora)", required = "required" })
        </div>

        <div class="form-group">
            <label>Precio</label>
            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", placeholder = "Ingrese el precio (Ej: 25000)", required = "required", type = "number" })
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn-save"><i class="bi bi-check-circle-fill"></i> Guardar Cambios</button>
            <a href="@Url.Action("ListServices", "Servicios")" class="btn-cancel"><i class="bi bi-x-circle-fill"></i> Cancelar</a>
        </div>
    }
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        font-family: 'Poppins', sans-serif;
        text-align: center;
    }

    h1 {
        color: #234449;
        margin-bottom: 10px;
    }

    p {
        color: #3e77f8;
        margin-bottom: 30px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #234449;
            margin-bottom: 5px;
        }

    .form-control {
        width: 80%;
        max-width: 350px;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1em;
        transition: border-color 0.3s;
        text-align: center;
    }

        .form-control:focus {
            border-color: #3e77f8;
            outline: none;
        }

    .form-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-save, .btn-cancel {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        text-align: center;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        font-family: 'Poppins', sans-serif;
        text-decoration: none;
    }

    .btn-save {
        background-color: #3e77f8;
        color: #fff;
    }

        .btn-save:hover {
            background-color: #234449;
        }

    .btn-cancel {
        background-color: #f0f0f0;
        color: #234449;
    }

        .btn-cancel:hover {
            background-color: #e0e0e0;
        }
</style>
