@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Servicios";
}

<div class="receipts-container">
    <h1>Gestión de Servicios</h1>
    <p>Seleccione una opción para continuar</p>

    <div class="options">


        <!-- Botón para Crear Servicios -->
        <a href="@Url.Action("CreateService", "Servicios")" class="option-card">
            <i class="bi bi-plus-square-fill"></i>
            <h3>Registrar Servicio</h3>
            <p>Ingresar nuevos servicios en el sistema</p>
        </a>

        <!-- Botón para Ver Servicios -->
        <a href="@Url.Action("ListServices", "Servicios")" class="option-card">
            <i class="bi bi-layout-text-sidebar"></i>
            <h3>Ver Servicios</h3>
            <p>Consultar el listado de servicios</p>
        </a>

    </div>
</div>

<!-- Estilos CSS -->
<style>
    .receipts-container {
        max-width: 800px;
        margin: 100px auto;
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2.5em;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 40px;
    }

    .options {
        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .option-card {
        width: 300px;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #234449;
        transition: transform 0.3s;
    }

        .option-card:hover {
            transform: translateY(-10px);
            background-color: #e6f2f7;
        }

        .option-card i {
            font-size: 3em;
            color: #3e77f8;
            margin-bottom: 20px;
        }

    h3 {
        margin-bottom: 10px;
        font-size: 1.5em;
    }
</style>

