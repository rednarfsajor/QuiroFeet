@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Usuarios";
}

<div class="users-container">
    <h1>Gestión de Usuarios</h1>
    <p>Selecciona una opción para continuar.</p>

    <div class="options">
        <!-- Botón para Ver Usuarios -->
        <a href="/Usuarios/ListUser" class="option-card">
            <i class="bi bi-people"></i>
            <h3>Ver Usuarios</h3>
            <p>Consulta la lista de usuarios registrados en la plataforma.</p>
        </a>

        <!-- Botón para Ver Inactivos -->
        <a href="/Usuarios/ListInactiveUsers" class="option-card">
            <i class="bi bi-person-x"></i>
            <h3>Ver Inactivos</h3>
            <p>Consulta los usuarios inactivos y vuelve a activarlos si es necesario.</p>
        </a>

        <!-- Botón para Crear Usuario -->
        <a href="/Usuarios/CreateUser" class="option-card">
            <i class="bi bi-person-plus"></i>
            <h3>Crear Usuario</h3>
            <p>Agrega un nuevo usuario proporcionando sus datos.</p>
        </a>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .users-container {
        max-width: 1000px;
        margin: 100px auto;
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2.5em;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 40px;
    }

    .options {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
    }

    .option-card {
        width: 300px;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #234449;
        transition: transform 0.3s;
    }

        .option-card:hover {
            transform: translateY(-10px);
            background-color: #e6f2f7;
        }

        .option-card i {
            font-size: 3em;
            color: #3e77f8;
            margin-bottom: 20px;
        }

        .option-card h3 {
            margin-bottom: 10px;
        }

        .option-card p {
            font-size: 1em;
            color: #555;
        }
</style>
