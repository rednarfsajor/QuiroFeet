@model IEnumerable<Analisis.BD.Usuarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Usuarios";
}

<div class="container">
    <h1>Usuarios Registrados</h1>
    <p>A continuación, se muestran los usuarios existentes en el sistema.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <!-- Tabla de Usuarios -->
        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Correo Electrónico</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@(item.Roles != null ? item.Roles.Nombre : "Sin Rol")</td>
                        <td>
                            <a href="@Url.Action("EditUser", "Usuarios", new { id = item.Id })" class="btn-edit">Editar</a>
                            <a href="@Url.Action("InactivarUser", "Usuarios", new { id = item.Id })" class="btn-inactivate">Inactivar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <!-- Mensaje si no hay usuarios -->
        <div class="no-data-message">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No hay usuarios registrados en el sistema.
        </div>
    }
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 900px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 0.95em;
    }

        .user-table th, .user-table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        .user-table th {
            background-color: #234449;
            color: white;
        }

    .btn-edit {
        background-color: #3e77f8;
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        margin-right: 6px;
    }

    .btn-inactivate {
        background-color: #e74c3c;
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
    }

        .btn-edit:hover,
        .btn-inactivate:hover {
            opacity: 0.9;
        }

    .no-data-message {
        margin-top: 30px;
        background-color: #fff3f3;
        color: #a94442;
        border: 1px solid #f5c6cb;
        border-radius: 10px;
        padding: 16px 24px;
        font-size: 1.1em;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        font-weight: 600;
    }

        .no-data-message i {
            color: #e74c3c;
            font-size: 1.4em;
        }

    .success-message {
        margin-top: 10px;
        background-color: #e6f4ea;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 10px;
        padding: 14px 20px;
        font-size: 1em;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
    }
</style>
