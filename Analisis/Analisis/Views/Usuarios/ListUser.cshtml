@model IEnumerable<Analisis.BD.Usuarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Usuarios";
}

<div class="user-container">
    <h1><i class="bi bi-person-badge-fill"></i> Lista de Usuarios</h1>
    <p>Visualiza los usuarios registrados en el sistema.</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Correo Electrónico</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@(item.Roles != null ? item.Roles.Nombre : "Sin Rol")</td>
                        <td>
                            <a href="@Url.Action("EditUser", "Usuarios", new { id = item.Id })" class="btn btn-edit">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a href="@Url.Action("InactivarUser", "Usuarios", new { id = item.Id })" class="btn btn-inactivate">
                                <i class="bi bi-person-x-fill"></i> Inactivar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data-message">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No hay usuarios registrados en el sistema.
        </div>
    }
</div>

<!-- Estilos CSS -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .user-container {
        max-width: 950px;
        margin: 60px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 30px;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95em;
    }

        .user-table th, .user-table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        .user-table th {
            background-color: #234449;
            color: white;
        }

        .user-table tbody tr:hover {
            background-color: #f4f9ff;
        }

    .btn {
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 0.85em;
        text-decoration: none;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        margin: 2px;
        border: none;
        cursor: pointer;
    }

    .btn-edit {
        background-color: #007bff;
    }

    .btn-inactivate {
        background-color: #dc3545;
    }

    .btn-edit:hover {
        background-color: #0056b3;
    }

    .btn-inactivate:hover {
        background-color: #c82333;
    }

    .success-message {
        background-color: #e6f4ea;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 10px;
        padding: 14px 20px;
        font-size: 1em;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .no-data-message {
        margin-top: 30px;
        background-color: #fff3f3;
        color: #a94442;
        border: 1px solid #f5c6cb;
        border-radius: 10px;
        padding: 16px 24px;
        font-size: 1em;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        font-weight: 600;
    }

        .no-data-message i {
            font-size: 1.3em;
            color: #e74c3c;
        }

    .success-message i {
        font-size: 1.2em;
        color: #28a745;
    }
</style>
