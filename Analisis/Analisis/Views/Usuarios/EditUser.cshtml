@model Analisis.BD.Usuarios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Usuario";
}

<div class="user-edit-container">
    <h1><i class="bi bi-pencil-square"></i> Editar Usuario</h1>
    <p>Modifica la información del usuario y guarda los cambios.</p>

    @using (Html.BeginForm("EditUser", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <!-- Nombre Completo -->
        <div class="form-group">
            <label for="Nombre" class="form-label"><i class="bi bi-person-fill"></i> Nombre Completo</label>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre completo", required = "required" })
        </div>

        <!-- Correo Electrónico -->
        <div class="form-group">
            <label for="Email" class="form-label"><i class="bi bi-envelope-fill"></i> Correo Electrónico</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Ingrese el correo electrónico", required = "required" })
        </div>

        <!-- Rol del Usuario -->
        <div class="form-group">
            <label for="RolId" class="form-label"><i class="bi bi-person-gear"></i> Rol del Usuario</label>
            @Html.DropDownList("RolId", null, htmlAttributes: new { @class = "form-control", required = "required" })
        </div>

        <!-- Botones -->
        <div class="form-actions">
            <button type="submit" class="btn btn-save">
                <i class="bi bi-save2-fill"></i> Guardar Cambios
            </button>
            <a href="@Url.Action("ListUser", "Usuarios")" class="btn btn-cancel">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </a>
        </div>
    }
</div>

<!-- CSS Estilizado -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .user-edit-container {
        max-width: 650px;
        margin: 60px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 30px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
        color: #234449;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
    }

    .btn-save {
        background-color: #234449;
        color: white;
    }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
    }

    .btn-save:hover {
        background-color: #3e77f8;
    }

    .btn-cancel:hover {
        background-color: #5a6268;
    }
</style>
