@model IEnumerable<Analisis.BD.Usuarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Usuarios Inactivos";
}

<div class="container">
    <h1>Usuarios Inactivos</h1>
    <p>A continuación, se muestran los usuarios inactivos en el sistema.</p>

    @if (TempData["ActivateSuccess"] != null)
    {
        <div class="alert alert-success">
            @TempData["ActivateSuccess"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Correo Electrónico</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@item.Roles.Nombre</td>
                        <td>
                            @using (Html.BeginForm("ActivarUser", "Usuarios", FormMethod.Post, new { @class = "inline-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.Id)
                                <button type="submit" class="btn-activar">Activar</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data-message">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No hay usuarios inactivos en el sistema.
        </div>
    }
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 900px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
    }

    .user-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .user-table th, .user-table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        .user-table th {
            background-color: #234449;
            color: white;
        }

    .btn-activar {
        background-color: #28a745;
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 8px;
        text-decoration: none;
    }

        .btn-activar:hover {
            background-color: #218838;
        }

    .no-data-message {
        margin-top: 30px;
        background-color: #fff3f3;
        color: #a94442;
        border: 1px solid #f5c6cb;
        border-radius: 10px;
        padding: 16px 24px;
        font-size: 1.1em;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        font-weight: 600;
    }

    .alert {
        background-color: #d4edda;
        color: #155724;
        padding: 15px;
        margin-bottom: 25px;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        font-size: 1.1em;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
</style>
