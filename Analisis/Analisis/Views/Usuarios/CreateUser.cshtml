@model Analisis.BD.Usuarios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear Usuario";
}

<div class="container">
    <h1>Crear Usuario</h1>
    <p>Por favor, completa el formulario para registrar un nuevo usuario.</p>

    @using (Html.BeginForm("CreateUser", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <!-- Nombre Completo -->
        <div class="form-group">
            <label for="Nombre">Nombre Completo</label>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre completo", required = "required" })
        </div>

        <!-- Correo Electrónico -->
        <div class="form-group">
            <label for="Email">Correo Electrónico</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Ingrese el correo electrónico", required = "required" })
        </div>

        <!-- Rol del Usuario -->
        <div class="form-group">
            <label for="RolId">Rol del Usuario</label>
            @Html.DropDownList("RolId", ViewBag.RolId as SelectList, "Seleccione un rol", new { @class = "form-control", required = "required" })
        </div>

        <!-- Contraseña -->
        <div class="form-group">
            <label for="Password">Contraseña</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Ingrese la contraseña", required = "required" })
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirmar Contraseña</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirme la contraseña" required>
        </div>

        <button type="submit" class="btn btn-primary">Crear Usuario</button>
        <a href="@Url.Action("ListUser", "Usuarios")" class="btn btn-secondary">Cancelar</a>
    }
</div>

<!-- Estilos -->
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input, select {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    button, .btn-secondary {
        background-color: #3e77f8;
        border-color: #3e77f8;
        color: white;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        margin-right: 10px;
        text-decoration: none;
    }

        button:hover, .btn-secondary:hover {
            background-color: #234449;
        }
</style>
