@model Analisis.BD.Usuarios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear Usuario";
}

<div class="user-form-container">
    <h1><i class="bi bi-person-plus-fill"></i> Crear Usuario</h1>
    <p>Completa el formulario para registrar un nuevo usuario en el sistema.</p>

    @using (Html.BeginForm("CreateUser", "Usuarios", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <!-- Nombre Completo -->
        <div class="form-group">
            <label for="Nombre" class="form-label"><i class="bi bi-person-fill"></i> Nombre Completo</label>
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre completo", required = "required" })
        </div>

        <!-- Correo Electrónico -->
        <div class="form-group">
            <label for="Email" class="form-label"><i class="bi bi-envelope-fill"></i> Correo Electrónico</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Ingrese el correo electrónico", required = "required" })
        </div>

        <!-- Rol del Usuario -->
        <div class="form-group">
            <label for="RolId" class="form-label"><i class="bi bi-person-gear"></i> Rol</label>
            @Html.DropDownList("RolId", ViewBag.RolId as SelectList, "Seleccione un rol", new { @class = "form-control", required = "required" })
        </div>

        <!-- Contraseña -->
        <div class="form-group">
            <label for="Password" class="form-label"><i class="bi bi-key-fill"></i> Contraseña</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Ingrese la contraseña", required = "required" })
        </div>

        <!-- Confirmar Contraseña -->
        <div class="form-group">
            <label for="confirmPassword" class="form-label"><i class="bi bi-key"></i> Confirmar Contraseña</label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirme la contraseña" required>
        </div>

        <!-- Botones -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle-fill"></i> Crear Usuario
            </button>
            <a href="@Url.Action("ListUser", "Usuarios")" class="btn btn-secondary">
                <i class="bi bi-x-circle-fill"></i> Cancelar
            </a>
        </div>
    }
</div>

<!-- CSS Estilizado -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .user-form-container {
        max-width: 650px;
        margin: 60px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 30px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
        color: #234449;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
    }

    .btn-primary {
        background-color: #234449;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-primary:hover {
        background-color: #3e77f8;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>
