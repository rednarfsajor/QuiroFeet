@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Inventario";
}

<!-- Estilos CSS -->
<style>
    .inventario-container {
        max-width: 1000px;
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        color: #234449;
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-bottom: 30px;
    }

        .action-buttons a {
            text-decoration: none;
            background-color: #3e77f8;
            color: #fff;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 1.2em;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .action-buttons a:hover {
                transform: translateY(-5px);
                background-color: #234449;
            }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 40px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #234449;
        color: white;
    }

    td a {
        color: #3e77f8;
        text-decoration: none;
    }

        td a:hover {
            color: #234449;
        }
</style>

<div class="inventario-container">
    <h2>Inventario</h2>

    <div class="action-buttons">
        <a href="@Url.Action("RegistrarProducto", "Inventario")">Registrar Producto</a>
        <a href="@Url.Action("HistorialMovimientos", "Inventario")">Historial de Movimientos</a>
        <a href="@Url.Action("AlertasStock", "Inventario")">Alertas de Stock Mínimo</a>
        <a href="@Url.Action("CrearOrdenCompra", "Inventario")">Crear Orden de Compra</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Producto A</td>
                <td>Descripción del Producto A</td>
                <td>
                    <a href="@Url.Action("EditarProducto", new { id = 1 })">Editar</a>
                    <a href="@Url.Action("InactivarProducto", new { id = 1 })">Inactivar</a>
                </td>
            </tr>
            <!-- Más productos aquí -->
        </tbody>
    </table>
</div>
