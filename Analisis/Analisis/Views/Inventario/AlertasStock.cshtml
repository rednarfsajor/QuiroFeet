@model IEnumerable<Tuple<Analisis.BD.Inventario, Analisis.BD.Productos>>

@{
    ViewBag.Title = "Alertas de Stock";
}

<h2>⚠️ Productos con Bajo Stock</h2>

@if (!Model.Any())
{
    <div class="alert alert-success">
        Todos los productos tienen suficiente stock.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Producto</th>
                
                <th>Stock Actual</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-warning">
                    <td>@item.Item2.nombre</td>
                   
                    <td><strong>@item.Item1.stock</strong></td>
                   
                </tr>
            }
        </tbody>
    </table>
}
