@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alertas de Stock Mínimo";
}

<!-- Estilos CSS -->
<style>
    .alertas-container {
        max-width: 900px;
        margin: 50px auto;
    }

    h2 {
        color: #234449;
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .alerta-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .alerta-card h3 {
            color: #234449;
            font-size: 1.8em;
            margin-bottom: 10px;
        }

        .alerta-card p {
            color: #555;
            font-size: 1.2em;
            margin-bottom: 10px;
        }

        .alerta-card .cantidad {
            color: #ff4c4c;
            font-size: 1.5em;
            font-weight: bold;
        }

        .alerta-card .boton-orden {
            background-color: #3e77f8;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 1.2em;
            text-decoration: none;
            transition: transform 0.3s;
        }

            .alerta-card .boton-orden:hover {
                transform: translateY(-5px);
                background-color: #234449;
            }
</style>

