@model Analisis.BD.Productos

@{
    ViewBag.Title = "Registrar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="full-page-container">
    <div class="form-container">
        <h1><i class="bi bi-box-seam"></i> Nuevo Producto</h1>
        <p>Por favor, completa todos los campos</p>

        @using (Html.BeginForm("RegistrarProducto", "Inventario", FormMethod.Post, new { @class = "formulario", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.nombre)
                <div class="input-icon">
                    <i class="bi bi-card-text"></i>
                    @Html.TextBoxFor(model => model.nombre, new { @class = "form-control", placeholder = "Ej. Producto XYZ", required = "required", autofocus = "autofocus" })
                </div>
                @Html.ValidationMessageFor(model => model.nombre)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.descripcion)
                <div class="input-icon">
                    <i class="bi bi-text-paragraph"></i>
                    @Html.TextAreaFor(model => model.descripcion, new { @class = "form-control", rows = 3, placeholder = "Descripción del producto" })
                </div>
                @Html.ValidationMessageFor(model => model.descripcion)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.precio)
                <div class="input-icon">
                    <i class="bi bi-currency-dollar"></i>
                    @Html.TextBoxFor(model => model.precio, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Ej. 99.99", required = "required" })
                </div>
                @Html.ValidationMessageFor(model => model.precio)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.id_proveedor, "Proveedor")
                <div class="input-icon">
                    <i class="bi bi-truck"></i>
                    @Html.DropDownListFor(model => model.id_proveedor, ViewBag.IdProveedor as SelectList, "-- Seleccione un proveedor --", new { @class = "form-control", required = "required" })
                </div>
                @Html.ValidationMessageFor(model => model.id_proveedor)
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle-fill"></i> Guardar
                </button>
                <a href="@Url.Action("Index", "Inventario")" class="btn-cancel">
                    <i class="bi bi-x-circle-fill"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: url('@Url.Content("~/Imagenes/marmol2.jfif")') no-repeat center center fixed;
        background-size: cover;
    }

    .full-page-container {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.97);
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        max-width: 500px;
        width: 100%;
        text-align: center;
    }

    .form-container h1 {
        font-size: 2em;
        font-weight: 700;
        color: #234449;
        margin-bottom: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

    .form-container p {
        color: #3e77f8;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-group label {
        font-weight: 600;
        color: #234449;
        margin-bottom: 5px;
        display: block;
        text-transform: capitalize;
    }

    .input-icon {
        display: flex;
        align-items: center;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 8px 12px;
    }

    .input-icon i {
        margin-right: 10px;
        color: #3e77f8;
        font-size: 1.2em;
    }

    .input-icon input,
    .input-icon textarea,
    .input-icon select {
        border: none;
        outline: none;
        width: 100%;
        font-family: 'Poppins', sans-serif;
        background-color: transparent;
        font-size: 1em;
    }

    .form-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 25px;
    }

    .btn-submit, .btn-cancel {
        flex: 1;
        text-align: center;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        font-family: 'Poppins', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-submit {
        background-color: #3e77f8;
        color: #fff;
    }

    .btn-submit:hover {
        background-color: #234449;
    }

    .btn-cancel {
        background-color: #f0f0f0;
        color: #234449;
    }

    .btn-cancel:hover {
        background-color: #ddd;
    }

    .field-validation-error {
        color: #dc3545;
        font-size: 0.9em;
        margin-top: 5px;
    }

    .btn-submit i {
        color: #fff;
    }
</style>
