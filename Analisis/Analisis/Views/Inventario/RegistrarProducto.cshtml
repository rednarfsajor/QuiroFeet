@model Analisis.BD.Productos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrar Producto";
}

<div class="qf-page-header">
    <div>
        <h1 class="qf-page-title">
            <i class="bi bi-box-seam"></i> Registrar producto
        </h1>
        <p class="qf-page-subtitle">
            Completa la información para registrar un nuevo producto en el inventario de QuiroFeet.
        </p>
    </div>
</div>

<div class="qf-form-wrapper">
    <div class="qf-form-card">
        <div class="qf-form-layout">

            <!-- Panel lateral con info -->
            <div class="qf-form-side">
                <div class="qf-form-side-icon">
                    <i class="bi bi-box-seam"></i>
                </div>
                <h2>Datos del producto</h2>
                <p>
                    Registra productos con su proveedor y precio para controlar el inventario,
                    órdenes de compra y ventas en QuiroFeet.
                </p>

                <ul>
                    <li><i class="bi bi-check-circle-fill"></i> Nombre descriptivo del producto.</li>
                    <li><i class="bi bi-check-circle-fill"></i> Precio con dos decimales.</li>
                    <li><i class="bi bi-check-circle-fill"></i> Asociación a un proveedor existente.</li>
                </ul>
            </div>

            <!-- Formulario principal -->
            <div class="qf-form-main">
                @using (Html.BeginForm("RegistrarProducto", "Inventario", FormMethod.Post, new { @class = "qf-form", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "qf-validation-summary" })

                    <div class="qf-form-grid">

                        <!-- Nombre -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="nombre">Nombre del producto</label>
                            @Html.TextBoxFor(m => m.nombre, new
                            {
                                @class = "qf-form-control",
                                placeholder = "Ej: Crema hidratante 200ml",
                                required = "required",
                                maxlength = "150"
                            })
                            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- Proveedor -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="id_proveedor">Proveedor</label>
                            @Html.DropDownListFor(m => m.id_proveedor,
                                ViewBag.IdProveedor as SelectList,
                                "-- Seleccione un proveedor --",
                                new { @class = "qf-form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.id_proveedor, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- Descripción (a lo ancho) -->
                        <div class="qf-form-group qf-form-group-full">
                            <label class="qf-form-label" for="descripcion">Descripción</label>
                            @Html.TextAreaFor(m => m.descripcion, new
                            {
                                @class = "qf-form-control",
                                rows = "3",
                                placeholder = "Descripción del producto, presentación, uso, etc.",
                                maxlength = "500"
                            })
                            @Html.ValidationMessageFor(m => m.descripcion, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- Precio -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="precio">Precio</label>
                            @Html.TextBoxFor(m => m.precio, new
                            {
                                @class = "qf-form-control",
                                type = "number",
                                step = "0.01",
                                min = "0",
                                placeholder = "Ej: 9990.00",
                                required = "required"
                            })
                            @Html.ValidationMessageFor(m => m.precio, "", new { @class = "qf-field-error" })
                        </div>

                    </div>

                    <div class="qf-form-actions">
                        <button type="submit" class="qf-btn qf-btn-primary">
                            <i class="bi bi-check-lg"></i> Guardar producto
                        </button>

                        <a href="@Url.Action("Inventario", "Inventario")" class="qf-btn qf-btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles{
    <style>
        /* ===== HEADER ===== */
        .qf-page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.75rem;
            gap: 1rem;
        }

        .qf-page-title {
            font-size: 2.3rem;
            margin: 0;
            color: #234449;
        }

            .qf-page-title i {
                margin-right: .5rem;
            }

        .qf-page-subtitle {
            margin: .25rem 0 0;
            color: #6B7280;
            font-size: .95rem;
        }

        /* ===== WRAPPER GENERAL ===== */
        .qf-form-wrapper {
            margin-bottom: 2.5rem;
        }

        /* ===== CARD DEL FORM ===== */
        .qf-form-card {
            background: #ffffff;
            border-radius: 22px;
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.10);
            padding: 2.2rem 2.4rem;
            max-width: 1150px;
            width: 100%;
            margin: 0 auto;
        }

        .qf-form-layout {
            display: grid;
            grid-template-columns: minmax(260px, 340px) minmax(0, 1fr);
            gap: 2.2rem;
        }

        /* ===== PANEL LATERAL ===== */
        .qf-form-side {
            background: linear-gradient(145deg, #234449, #0FC57C);
            border-radius: 18px;
            padding: 1.6rem 1.5rem;
            color: #ECFEFF;
            display: flex;
            flex-direction: column;
            gap: .75rem;
        }

        .qf-form-side-icon {
            width: 46px;
            height: 46px;
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.12);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: .25rem;
        }

            .qf-form-side-icon i {
                font-size: 1.6rem;
            }

        .qf-form-side h2 {
            font-size: 1.25rem;
            margin: 0;
        }

        .qf-form-side p {
            font-size: .9rem;
            margin: 0;
            opacity: 0.9;
        }

        .qf-form-side ul {
            list-style: none;
            padding-left: 0;
            margin: .75rem 0 0;
            display: flex;
            flex-direction: column;
            gap: .35rem;
            font-size: .86rem;
        }

        .qf-form-side li {
            display: flex;
            gap: .4rem;
            align-items: flex-start;
        }

            .qf-form-side li i {
                font-size: .95rem;
                margin-top: 1px;
            }

        /* ===== FORM PRINCIPAL ===== */
        .qf-form-main .qf-form {
            width: 100%;
        }

        .qf-validation-summary {
            margin-bottom: 1rem;
            padding: .7rem .9rem;
            border-radius: 10px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #b91c1c;
            font-size: .85rem;
        }

        .qf-form-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.25rem 1.75rem;
        }

        .qf-form-group {
            display: flex;
            flex-direction: column;
            gap: .25rem;
        }

        .qf-form-group-full {
            grid-column: 1 / -1;
        }

        .qf-form-label {
            font-size: .85rem;
            font-weight: 600;
            color: #4B5563;
        }

        .qf-form-control {
            width: 100%;
            padding: .55rem .8rem;
            border-radius: 10px;
            border: 1px solid #D1D5DB;
            font-size: .9rem;
            outline: none;
        }

            .qf-form-control:focus {
                border-color: #0FC57C;
                box-shadow: 0 0 0 1px rgba(15, 197, 124, 0.25);
            }

        .qf-field-error {
            font-size: .8rem;
            color: #dc2626;
        }

        .qf-form-actions {
            margin-top: 1.9rem;
            display: flex;
            gap: .75rem;
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        /* ===== BOTONES ===== */
        .qf-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: .35rem;
            padding: .45rem 1.05rem;
            border-radius: 999px;
            border: none;
            font-size: .85rem;
            cursor: pointer;
            text-decoration: none;
            font-weight: 500;
            transition: background .15s, transform .1s, box-shadow .15s;
        }

        .qf-btn-primary {
            background: #0FC57C;
            color: #ffffff;
            box-shadow: 0 4px 10px rgba(15, 197, 124, 0.35);
        }

            .qf-btn-primary:hover {
                background: #0aa164;
                transform: translateY(-1px);
            }

        .qf-btn-secondary {
            background: #E5E7EB;
            color: #234449;
        }

            .qf-btn-secondary:hover {
                background: #d1d5db;
            }

        @@media (max-width: 992px) {
            .qf-form-card {
                padding: 1.8rem 1.6rem;
            }

            .qf-form-layout {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .qf-form-grid {
                grid-template-columns: 1fr;
            }

            .qf-form-actions {
                justify-content: flex-start;
            }
        }
    </style>
}
