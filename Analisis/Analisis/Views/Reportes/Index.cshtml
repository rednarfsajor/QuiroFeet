@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reportes";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url('@Url.Content("~/Imagenes/GIF.gif")') no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

    body::before {
        content: "";
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(255, 255, 255, 0.6);
        z-index: -1;
    }

    .reportes-container {
        width: 90%;
        max-width: 1100px;
        margin: 60px auto;
        padding: 50px 40px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        color: #1f3a47;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 40px;
    }

    .action-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        padding-bottom: 30px;
    }

    .action-buttons a {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 18px;
        background: #e3f2fd;
        color: #0d47a1 !important;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .action-buttons a:hover {
        background: #d0e3f5;
        transform: translateY(-3px);
    }

    .action-buttons a i {
        font-size: 1.4rem;
    }

    .blue { background: #e3f2fd; color: #0d47a1 !important; }

    .estadisticas-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 18px 24px;
        background: #e6f4ea;
        color: #1e7e34 !important;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 12px;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .estadisticas-btn:hover {
        background: #d3eddc;
        transform: translateY(-3px);
    }

    @@media screen and (max-width: 768px) {
        h2 { font-size: 2rem; }
        .estadisticas-btn { width: 100%; justify-content: center; }
    }
</style>

<div class="reportes-container">
    <h2><i class="bi bi-gear-fill"></i> Panel de Reportes</h2>

    <div class="action-buttons">
        <a href="@Url.Action("ExportarOrdenesPdf", "Reportes")" class="blue">
            <i class="bi bi-receipt"></i> Órdenes PDF
        </a>
        <a href="@Url.Action("ExportarProveedoresPdf", "Reportes")" class="blue">
            <i class="bi bi-truck"></i> Proveedores PDF
        </a>
        <a href="@Url.Action("ExportarUsuariosPdf", "Reportes")" class="blue">
            <i class="bi bi-person-badge"></i> Usuarios PDF
        </a>
        <a href="@Url.Action("ExportarInventarioPdf", "Reportes")" class="blue">
            <i class="bi bi-box-seam"></i> Inventario PDF
        </a>
        <a href="@Url.Action("ExportarClientesPdf", "Reportes")" class="blue">
            <i class="bi bi-people-fill"></i> Clientes PDF
        </a>
        <a href="@Url.Action("ExportarServiciosPdf", "Reportes")" class="blue">
            <i class="bi bi-heart-pulse"></i> Servicios PDF
        </a>
        <a href="@Url.Action("ExportarVentasPdf", "Reportes")" class="blue">
            <i class="bi bi-cash-coin"></i> Ventas PDF
        </a>
        <a href="@Url.Action("ExportarCitasPdf", "Reportes")" class="blue">
            <i class="bi bi-calendar-check"></i> Citas PDF
        </a>
        <a href="@Url.Action("ExportarProductosMasVendidosPdf", "Reportes")" class="blue">
            <i class="bi bi-star-fill"></i> Más vendidos PDF
        </a>
    </div>

    <a href="@Url.Action("Estadisticas", "Reportes")" class="estadisticas-btn">
        <i class="bi bi-graph-up-arrow"></i> Ver Estadísticas
    </a>
</div>
