@{ ViewBag.Title = "Layout"; }

@{
    ViewBag.Title = "Layout"; // Puedes cambiar esto o asignarlo desde las vistas
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* Incluye Bootstrap CSS (Asumiendo que está en tu BundleConfig o lo cargas de otra forma) *@
    @* Si no usas bundles para CSS, asegúrate de tener el link a bootstrap.min.css aquí *@
    @Styles.Render("~/Content/css") @* Asume un bundle CSS llamado 'css' que incluye bootstrap y site.css *@
    @* Alternativamente, si no usas bundles CSS y cargaste bootstrap.css desde la carpeta Content:
        <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Content/site.css" />
    *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @* Añade aquí cualquier otra referencia CSS global si es necesario *@
    <title>@ViewBag.Title - QuiroFeet</title>
</head>
<body>
    <div class="sidebar">
        <h1>QuiroFeet</h1>
        <ul>
            @* --- Actualiza estos enlaces según tus controladores --- *@
            <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Inicio</a></li> @* Añadido ejemplo de Inicio *@
            <li><a href="@Url.Action("Index", "Clientes")"><i class="fas fa-user"></i> Clientes</a></li>
            <li><a href="@Url.Action("Index", "Inventario")"><i class="fas fa-box"></i> Inventario</a></li>
            <li><a href="@Url.Action("Index", "Profesionales")"><i class="fas fa-briefcase"></i> Profesionales</a></li> @* Cambiado 'Profesionales' a 'Profesionales' *@
            <li><a href="@Url.Action("Index", "Proveedores")"><i class="fas fa-truck"></i> Proveedores</a></li>
            <li><a href="@Url.Action("Index", "Servicios")"><i class="fas fa-cogs"></i> Servicios</a></li>
            <li><a href="@Url.Action("Index", "Calendarizacion")"><i class="fas fa-calendar-alt"></i> Calendarización</a></li>
            <li><a href="@Url.Action("Sales", "Home")"><i class="fas fa-shopping-cart"></i> Ventas</a></li> @* Asumiendo que 'Sales' está en HomeController *@
            <li><a href="@Url.Action("Receipts", "Home")"><i class="fas fa-receipt"></i> Recibos</a></li> @* Asumiendo que 'Receipts' está en HomeController *@
            <li><a href="@Url.Action("Index", "Reportes")"><i class="fas fa-chart-line"></i> Reportes</a></li>
            <li><a href="@Url.Action("Users", "Home")"><i class="fas fa-users"></i> Usuarios</a></li> @* Asumiendo que 'Users' está en HomeController *@
            <li><a href="@Url.Action("Login", "Account")"><i class="fas fa-sign-in-alt"></i> Iniciar Sesión</a></li>
        </ul>
    </div>

    <div class="content">
        @RenderBody() @* Aquí se inserta el contenido de cada vista específica *@
    </div>

    @* ---------- SCRIPTS ESENCIALES AL FINAL DEL BODY ---------- *@

    @* Incluye los bundles de scripts definidos en App_Start/BundleConfig.cs *@
    @* Asegúrate de que estos bundles existan y tengan los nombres correctos ('jquery', 'bootstrap') *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @* Aquí es donde se renderizará la sección @section Scripts de tus vistas *@
    @RenderSection("Scripts", required: false)

    @* ---------- ESTILOS CSS EMBEBIDOS (Considera moverlos a Site.css) ---------- *@
    <style>
       

        body {
            display: flex;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f9fafb;
            height: 100vh; /* Asegura que el body ocupe toda la altura */
            overflow: hidden; /* Evita el scroll en el body, se manejará en .content */
        }

        .sidebar {
            width: 260px;
            background-color: #234449; /* Color principal oscuro */
            color: white;
            padding: 30px 20px;
            min-height: 100vh;
            overflow-y: auto; /* Scroll si el menú es muy largo */
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            flex-shrink: 0; /* Evita que el sidebar se encoja */
            z-index: 100; /* Asegura que esté por encima si hay otros elementos */
        }

            .sidebar h1 {
                color: #93ded7; /* Color acento claro */
                font-size: 1.8em;
                font-weight: 600;
                margin-bottom: 30px;
                text-align: center; /* Centrar título */
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .sidebar li {
                margin: 0; /* Quita margen vertical entre LIs */
            }

            .sidebar a {
                color: #e0f2f1; /* Un blanco menos brillante */
                text-decoration: none;
                font-size: 1em; /* Ligeramente más pequeño */
                display: flex;
                align-items: center;
                gap: 15px;
                padding: 12px 10px; /* Añade padding para más área clickeable */
                margin: 5px 0; /* Espacio entre enlaces */
                border-radius: 4px; /* Bordes redondeados suaves */
                transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
            }
                /* Estilo para el enlace activo (requiere lógica adicional con JS o ViewBag) */
                .sidebar a.active,
                .sidebar a:hover {
                    background-color: rgba(147, 222, 215, 0.1); /* Fondo suave al pasar el mouse */
                    color: #ffffff; /* Blanco brillante al pasar el mouse */
                }

        .content {
            flex-grow: 1; /* Ocupa el espacio restante */
            /* padding: 30px; */ /* Ajusta el padding si es necesario */
            background-color: #ffffff;
            overflow-y: auto; /* Permite scroll solo en el área de contenido */
            height: 100vh; /* Ocupa toda la altura */
        }

        .fas, .fab, .far, .fal { /* Aplica a todos los estilos de Font Awesome */
            font-size: 1.2em; /* Ligeramente más pequeño */
            width: 25px; /* Ancho fijo */
            text-align: center;
            margin-right: 5px; /* Espacio entre icono y texto */
            vertical-align: middle; /* Alinear verticalmente con el texto */
        }

        

    </style>
</body>
</html>