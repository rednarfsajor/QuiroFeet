@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Usuario";
}

<div class="container">
    <h1>Editar Usuario</h1>
    <p>Modifica la información del usuario y guarda los cambios.</p>

    <!-- Formulario para Editar Usuario -->
    <form action="@Url.Action("ConfirmEdit", "Home")" method="post">
        <label>Nombre Completo</label>
        <input type="text" name="FullName" placeholder="Ingrese el nombre completo" required />

        <label>Correo Electrónico</label>
        <input type="email" name="Email" placeholder="Ingrese el correo electrónico" required />

        <label>Teléfono</label>
        <input type="text" name="PhoneNumber" placeholder="Ingrese el número de teléfono" required pattern="\d{8}" title="Debe contener 8 dígitos" />

        <label>Rol del Usuario</label>
        <select name="Role">
            <option>Administrador</option>
            <option>Profesional</option>
            <option>Limpieza</option>
            <option>Recepción</option>
        </select>

        <!-- Botón para Guardar Cambios -->
        <button type="submit" class="btn-save">Guardar Cambios</button>
        <!-- Botón para Cancelar y Regresar -->
        <a href="@Url.Action("List", "Home")" class="btn-cancel">Cancelar</a>
    </form>
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
    }

    label {
        display: block;
        margin-top: 20px;
        font-weight: bold;
    }

    input, select {
        width: 100%;
        padding: 12px;
        margin-top: 8px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    .btn-save {
        background-color: #3e77f8;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
    }

    .btn-cancel {
        background-color: #e74c3c;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        margin-left: 10px;
    }

    .btn-save:hover {
        background-color: #234449;
    }

    .btn-cancel:hover {
        background-color: #c0392b;
    }
</style>
