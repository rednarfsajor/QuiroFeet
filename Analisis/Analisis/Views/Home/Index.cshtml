@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="welcome-container">

    @if (TempData["LoginSuccess"] != null)
    {
        <p class="login-success">@TempData["LoginSuccess"]</p>
    }

    <h1 class="welcome-title">Bienvenido a Quiropie By Lucy</h1>

    <svg viewBox="0 0 120 20" preserveAspectRatio="none" class="separator-svg" role="img" aria-label="Separador decorativo">
        <path d="M0 10 Q 60 20 120 10 T 240 10" fill="none" stroke="#3e77f8" stroke-width="2" />
    </svg>

    <p class="welcome-subtitle">Cuidado profesional para tus pies</p>

    <div class="image-collage">
        <div class="card">
            <img src="@Url.Content("~/Imagenes/1.jpg")" alt="Tratamiento de quiropodia 1" class="collage-image" />
        </div>
        <div class="card">
            <img src="@Url.Content("~/Imagenes/2.jpg")" alt="Tratamiento de quiropodia 2" class="collage-image" />
        </div>
        <div class="card">
            <img src="@Url.Content("~/Imagenes/3.jpg")" alt="Tratamiento de quiropodia 3" class="collage-image" />
        </div>
        <div class="card">
            <img src="@Url.Content("~/Imagenes/4.jpeg")" alt="Tratamiento de quiropodia 4" class="collage-image" />
        </div>
    </div>

    <p class="about-text">
        En Quiropie By Lucy nos especializamos en cuidar y consentir tus pies con tratamientos profesionales, garantizando comodidad y bienestar en cada paso.
    </p>

</div>

<style>
    :root{
        --qf-bg1:#f9fafb;
        --qf-bg2:#ffffff;
        --qf-text:#1f2d2f;
        --qf-muted:#637277;
        --qf-accent:#3e77f8;
        --qf-card:#ffffff;
        --qf-border:#e8eef2;
        --qf-shadow:0 8px 24px rgba(0,0,0,.08);
        --qf-radius:14px;
    }

    /* Fondo */
    body {
        background: linear-gradient(135deg, var(--qf-bg1) 0%, var(--qf-bg2) 100%);
        color: var(--qf-text);
        font-family: 'Poppins', system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
    }

    /* Contenedor fluido con padding adaptable */
    .welcome-container {
        text-align: center;
        padding: clamp(32px, 6vw, 72px) clamp(16px, 4vw, 40px);
        max-width: min(1200px, 92vw);
        margin-inline: auto;
    }

    .login-success {
        font-size: clamp(1rem, 1.8vw, 1.25rem);
        font-weight: 600;
        color: #234449;
        margin-bottom: 1rem;
    }

    .welcome-title {
        font-size: clamp(1.6rem, 3.8vw, 2.6rem);
        font-weight: 800;
        color: #234449;
        margin: 0 0 .4rem 0;
        letter-spacing:.2px;
    }

    .separator-svg {
        display: block;
        margin: clamp(12px, 2vw, 22px) auto;
        width: clamp(80px, 12vw, 140px);
        height: 20px;
    }

    .welcome-subtitle {
        font-size: clamp(1rem, 2vw, 1.25rem);
        color: var(--qf-accent);
        margin-bottom: clamp(18px, 3vw, 32px);
        font-weight: 600;
    }

    /* Collage responsive con grid auto-fit */
    .image-collage{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: clamp(12px, 2.2vw, 22px);
        align-items: stretch;
        margin-inline: auto;
    }

    .card{
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(8px);
        border-radius: var(--qf-radius);
        overflow: hidden;
        border: 1px solid var(--qf-border);
        box-shadow: var(--qf-shadow);
        transition: transform .25s ease, box-shadow .25s ease, filter .25s ease;
        will-change: transform;
    }
    .card:hover{
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0,0,0,.12);
        filter: saturate(1.02);
    }

    .collage-image{
        display: block;
        width: 100%;
        height: clamp(160px, 24vw, 240px);
        object-fit: cover;
        aspect-ratio: 5/4; /* mantiene proporción agradable */
    }

    .about-text{
        max-width: 60ch;
        margin: clamp(18px, 4vw, 34px) auto 0;
        font-size: clamp(.98rem, 1.6vw, 1.1rem);
        color: var(--qf-muted);
        line-height: 1.6;
    }

    /* Botón CTA (por si lo usas luego) */
    .btn-cta {
        display: inline-block;
        margin-top: clamp(18px, 3vw, 30px);
        background-color: #93ded7;
        color: #234449;
        padding: .65rem 1rem;
        border-radius: 10px;
        font-weight: 700;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform .18s ease, box-shadow .18s ease, background .18s ease, color .18s ease;
        text-decoration: none;
    }
    .btn-cta:hover{
        background-color: var(--qf-accent);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 8px 14px rgba(62,119,248,.25);
    }

    /* ===== Breakpoints (usa @@media para Razor) ===== */

    /* Móviles pequeños: una columna, paddings más compactos */
    @@media (max-width: 480px){
        .welcome-container{ padding: 28px 14px; }
        .collage-image{ height: 180px; }
    }

    /* Tablets: 2 columnas cómodas */
    @@media (min-width: 481px) and (max-width: 900px){
        .collage-image{ height: 200px; }
    }

    /* Desktop ancho: un poco más de altura a las imágenes */
    @@media (min-width: 1200px){
        .collage-image{ height: 260px; }
    }

    /* Accesibilidad: reduce animaciones si el usuario lo pide */
    @@media (prefers-reduced-motion: reduce){
        .card, .btn-cta { transition: none; }
    }
</style>
