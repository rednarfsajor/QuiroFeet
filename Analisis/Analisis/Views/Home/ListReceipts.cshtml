@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Recibos";
}

<div class="receipts-container">
    <h1>Lista de Recibos</h1>
    <p>A continuación se muestra un resumen de los recibos registrados en el sistema.</p>

    <table class="receipts-table">
        <thead>
            <tr>
                <th>Número de Recibo</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Monto Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Receipts != null && ViewBag.Receipts.Count > 0)
            {
                foreach (var receipt in ViewBag.Receipts)
                {
                    <tr>
                        <td>@receipt.ReceiptNumber</td>
                        <td>@receipt.ClientName</td>
                        <td>@receipt.Date.ToString("dd/MM/yyyy")</td>
                        <td>@receipt.Total.ToString("C")</td>
                        <td>
                            <a href="@Url.Action("EditReceipt", "Home", new { id = receipt.ReceiptNumber })" class="btn-edit">Editar</a>
                            <a href="@Url.Action("CancelReceipt", "Home", new { id = receipt.ReceiptNumber })" class="btn-cancel">Anular</a>
                            <a href="@Url.Action("DetailsReceipt", "Home", new { id = receipt.ReceiptNumber })" class="btn-details">Detalles</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No hay recibos registrados.</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Receipts", "Home")" class="btn-back">Volver al Panel de Recibos</a>
</div>

<!-- Estilos CSS -->
<style>
    .receipts-container {
        max-width: 900px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #234449;
    }

    p {
        font-size: 1.2em;
        color: #555;
    }

    .receipts-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .receipts-table th, .receipts-table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        .receipts-table th {
            background-color: #234449;
            color: white;
        }

    .btn-edit, .btn-cancel, .btn-details, .btn-back {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        color: white;
        margin: 5px;
    }

    .btn-edit {
        background-color: #007bff;
    }

    .btn-cancel {
        background-color: #dc3545;
    }

    .btn-details {
        background-color: #17a2b8;
    }

    .btn-back {
        background-color: #234449;
    }

    .btn-edit:hover {
        background-color: #0056b3;
    }

    .btn-cancel:hover {
        background-color: #c82333;
    }

    .btn-details:hover {
        background-color: #138496;
    }

    .btn-back:hover {
        background-color: #3e77f8;
    }
</style>
