@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrar Venta";
}

<div class="container">
    <h1>Registrar Venta</h1>
    <p>Ingrese la información de la venta.</p>

    <form>
        <!-- Nombre del Cliente -->
        <div class="form-group">
            <label for="nombreCliente">Nombre del Cliente</label>
            <input type="text" class="form-control" id="nombreCliente" placeholder="Ingrese el nombre del cliente" required>
        </div>

        <!-- Cédula del Cliente -->
        <div class="form-group">
            <label for="cedula">Cédula</label>
            <input type="text" class="form-control" id="cedula" placeholder="Ingrese la cédula" required>
        </div>

        <!-- Selección de Productos -->
        <div class="form-group">
            <label for="productos">Seleccionar Productos</label>
            <select class="form-control" id="productos" multiple>
                <option>Producto A - Público</option>
                <option>Producto B - Público</option>
                <option>Producto C - Prescripción</option>
            </select>
        </div>

        <!-- Cantidad -->
        <div class="form-group">
            <label for="cantidad">Cantidad</label>
            <input type="number" class="form-control" id="cantidad" placeholder="Ingrese la cantidad" required min="1">
        </div>

        <button type="submit" class="btn btn-primary">Registrar Venta</button>
    </form>
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
    }

    button {
        background-color: #3e77f8;
        color: white;
        border-radius: 8px;
        padding: 12px;
        border: none;
        cursor: pointer;
    }

        button:hover {
            background-color: #234449;
        }
</style>
