        text-align: center;
    }

    h1 {
        color: #D9534F;
        font-size: 2.3em;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 20px;
    }

    .btn-back,
    .btn-secondary {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
