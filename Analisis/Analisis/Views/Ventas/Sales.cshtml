@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Ventas";
}

<div class="sales-container">
    <h1>🧾 Gestión de Ventas</h1>
    <p>Seleccione una opción para continuar.</p>

    <div class="options">
        <!-- Botón para Registrar Venta de Productos -->
        <a href="@Url.Action("RegisterSale", "Ventas")" class="option-card">
            <i class="bi bi-cart-plus"></i>
            <h3>Registrar Venta de Productos</h3>
            <p>Registra una nueva venta de productos con control de stock.</p>
        </a>

        <!-- Botón para Registrar Venta de Servicios -->
        <a href="@Url.Action("RegisterServiceSale", "Ventas")" class="option-card">
            <i class="bi bi-person-workspace"></i>
            <h3>Registrar Venta de Servicios</h3>
            <p>Registra una venta asociada a servicios ofrecidos por profesionales.</p>
        </a>

        <!-- Botón para Ver Ventas Existentes -->
        <a href="@Url.Action("ListSales", "Ventas")" class="option-card">
            <i class="bi bi-receipt"></i>
            <h3>Consultar Ventas</h3>
            <p>Consulta el historial y detalles de ventas realizadas.</p>
        </a>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .sales-container {
        max-width: 1000px;
        margin: 80px auto;
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2.8em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 40px;
    }

    .options {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
    }

    .option-card {
        width: 280px;
        background-color: #ffffff;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #234449;
        transition: transform 0.3s, background-color 0.3s;
    }

        .option-card:hover {
            transform: translateY(-8px);
            background-color: #eef9fc;
        }

        .option-card i {
            font-size: 3em;
            color: #3e77f8;
            margin-bottom: 15px;
        }

        .option-card h3 {
            margin-bottom: 10px;
        }
</style>
