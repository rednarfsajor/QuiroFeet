@model Analisis.BD.Ventas

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Confirmación de Venta";
}

<div class="confirmation-card">
    <div class="icon-success">
        <i class="bi bi-check-circle-fill"></i>
    </div>
    <h1>¡Venta Registrada!</h1>

    <p>El número de recibo es <strong>#@Model.NumeroRecibo</strong></p>

    <div class="summary-box">
        <p><strong>Cliente:</strong> @(Model.Clientes != null ? Model.Clientes.nombre : Html.Raw("<span style='color:red'>No disponible</span>"))</p>
        <p><strong>Fecha:</strong> @(Model.fecha.HasValue ? Model.fecha.Value.ToString("dd/MM/yyyy hh:mm tt") : Html.Raw("<span style='color:red'>No disponible</span>"))</p>
        <p><strong>Total:</strong> ₡@string.Format("{0:N2}", Model.monto)</p>

        @if (Model.servicio == "True")
        {
            <p><strong>Servicio:</strong> @Model.detalle</p>
        }
        else if (Model.DetalleVenta != null && Model.DetalleVenta.Any())
        {
            <p><strong>Productos:</strong></p>
            <ul style="text-align:left; margin-top:10px;">
                @foreach (var detalle in Model.DetalleVenta)
                {
                    <li>
                        @(detalle.Productos != null ? detalle.Productos.nombre : "Producto N/D")
                        - Cantidad: @detalle.cantidad
                        - Monto: ₡@string.Format("{0:N2}", detalle.monto)
                    </li>
                }
            </ul>
        }
        else
        {
            <p style="color:red;">No hay productos registrados.</p>
        }
    </div>

    <div class="confirmation-actions">
        <a href="@Url.Action("Sales", "Ventas")" class="btn btn-back">
            <i class="bi bi-arrow-left-circle"></i> Volver al Listado
        </a>
        <a href="@Url.Action("Details", "Recibos", new { id = Model.id })" class="btn btn-success">
            <i class="bi bi-file-earmark-text"></i> Ver Detalle de Recibo
        </a>
    </div>
</div>

<style>
    .confirmation-card {
        max-width: 600px;
        margin: 80px auto;
        background: #ffffff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: 'Poppins', sans-serif;
    }

    .icon-success {
        font-size: 3rem;
        color: #28a745;
        margin-bottom: 15px;
    }

    h1 {
        color: #28a745;
        font-size: 1.8em;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1em;
        color: #333;
        margin: 8px 0;
    }

    .summary-box {
        margin-top: 20px;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

        .summary-box p, .summary-box ul {
            margin: 6px 0;
        }

    .confirmation-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1em;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-back {
        background-color: #6c757d;
    }

        .btn-back:hover {
            background-color: #5a6268;
        }

    .btn-success {
        background-color: #198754;
    }

        .btn-success:hover {
            background-color: #157347;
        }

    @@media (max-width: 480px) {
        .confirmation-card {
            padding: 20px;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>
