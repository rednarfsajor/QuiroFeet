@model IEnumerable<Analisis.BD.Clientes>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Clientes";
}

<div class="container">
    <h2 class="text-center">Clientes Registrados</h2>
    <p class="text-center subtitulo">Reporte del listado de clientes en el sistema</p>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            No hay clientes registrados en la base de datos.
        </div>
    }
    else
    {
        <table class="tabla-estilo">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr>
                        <td>@cliente.id</td>
                        <td>@cliente.nombre</td>
                        <td>@cliente.correo</td>
                        <td>@cliente.telefono</td>
                        <td class="acciones-columna">
                            <a href="@Url.Action("EditClient", "Clientes", new { id = cliente.id })" class="btn-azul">Editar</a>
                            <a href="@Url.Action("DeleteClient", "Clientes", new { id = cliente.id })" class="btn-azul btn-delete">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9f9f9;
    }

    .container {
        max-width: 1100px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #234449;
        font-weight: bold;
    }

    .subtitulo {
        color: #6c757d;
        margin-bottom: 30px;
    }

    .tabla-estilo {
        width: 100%;
        border-collapse: collapse;
        font-size: 16px;
    }

        .tabla-estilo thead tr {
            background-color: #234449;
            color: white;
        }

        .tabla-estilo th,
        .tabla-estilo td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .tabla-estilo tbody tr:nth-child(even) {
            background-color: #f2f9ff;
        }

        .tabla-estilo tbody tr:hover {
            background-color: #eaf1ff;
        }

    .acciones-columna {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
    }

    .btn-azul {
        display: inline-block;
        background-color: #3e77f8;
        color: white;
        padding: 8px 14px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.2s ease;
    }

        .btn-azul:hover {
            background-color: #234449;
        }

    .btn-delete {
        background-color: #3e77f8;
    }
</style>


