@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Clientes";
}

<div class="receipts-container">
    <h1>Gestión de Clientes</h1>
    <p>Seleccione una opción para continuar.</p>

    <div class="options">


        <!-- Botón para Crear Clientes -->
        <a href="@Url.Action("CreateClient", "Clientes")" class="option-card">
            <i class="bi bi-person-fill-add"></i>
            <h3>Registrar Cliente</h3>
            <p>Ingresar nuevos clientes en el sistema</p>
        </a>

        <!-- Botón para Ver Clientes -->
        <a href="@Url.Action("ListClients", "Clientes")" class="option-card">
            <i class="bi bi-people-fill"></i>
            <h3>Ver Clientes</h3>
            <p>Consultar el listado de clientes</p>
        </a>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .receipts-container {
        max-width: 800px;
        margin: 100px auto;
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2.5em;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 40px;
    }

    .options {
        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .option-card {
        width: 300px;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #234449;
        transition: transform 0.3s;
    }

        .option-card:hover {
            transform: translateY(-10px);
            background-color: #e6f2f7;
        }

        .option-card i {
            font-size: 3em;
            color: #3e77f8;
            margin-bottom: 20px;
        }

    h3 {
        margin-bottom: 10px;
        font-size: 1.5em;
    }
</style>

