@model Analisis.BD.Clientes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrar Cliente";
}

<!-- Contenedor -->
<div class="form-container">
    <h2 class="form-title">Registrar Cliente</h2>
    <p class="form-subtitle">Por favor, completa el formulario para registrar un nuevo cliente</p>

    @using (Html.BeginForm("CreateClient", "Clientes", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <!-- Nombre -->
        <div class="form-group">
            <label for="nombre" class="form-label">Nombre</label>
            @Html.TextBoxFor(model => model.nombre, new
            {
                @class = "form-input text-center",
                placeholder = "Ingrese el nombre"
            })
            @Html.ValidationMessageFor(model => model.nombre, null, new { @class = "text-danger" })
        </div>

        <!-- Correo -->
        <div class="form-group">
            <label for="correo" class="form-label">Correo Electrónico</label>
            @Html.TextBoxFor(model => model.correo, new
            {
                @class = "form-input text-center",
                placeholder = "Ingrese el correo electrónico"
            })
            @Html.ValidationMessageFor(model => model.correo, null, new { @class = "text-danger" })
        </div>

        <!-- Teléfono -->
        <div class="form-group">
            <label for="telefono" class="form-label">Teléfono</label>
            @Html.TextBoxFor(model => model.telefono, new
            {
                @class = "form-input text-center",
                placeholder = "Ingrese el número de teléfono",
                pattern = "\\d{8}",
                title = "Debe tener 8 dígitos"
            })
            @Html.ValidationMessageFor(model => model.telefono, null, new { @class = "text-danger" })
        </div>

        <!-- Botones -->
        <div class="form-button-group">
            <button type="submit" class="btn-submit">Registrar Cliente</button>
            <a href="@Url.Action("ClientIndex", "Clientes")" class="btn-cancel">
                <span class="cancel-icon-circle"><span class="x-char">X</span></span>
                <span>Cancelar</span>
            </a>
        </div>
    }
</div>

<!-- Estilos -->
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f9f9f9;
    }

    .form-container {
        max-width: 500px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .form-title {
        color: #234449;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .form-subtitle {
        color: #5a73fc;
        margin-bottom: 30px;
    }

    .form-group {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .form-input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #ffffff;
        text-align: center;
    }

    .form-button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 30px;
    }

    .btn-submit {
        background-color: #3e77f8;
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-submit:hover {
            background-color: #234449;
        }

    .btn-cancel {
        background-color: #f1f1f1;
        color: #234449;
        padding: 12px 20px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: bold;
        text-decoration: none;
        border: 1px solid #ccc;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: background-color 0.2s;
    }

        .btn-cancel:hover {
            background-color: #e0e0e0;
        }

    .cancel-icon-circle {
        background-color: #3e77f8;
        color: #ffffff;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .x-char {
        font-size: 14px;
        font-weight: 500;
        font-family: 'Poppins', sans-serif;
        line-height: 1;
    }

    .text-danger {
        color: red;
        font-size: 14px;
    }
</style>
