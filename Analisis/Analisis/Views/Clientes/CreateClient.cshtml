@model Analisis.BD.Clientes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrar Cliente";
}

<div class="qf-page-header">
    <div>
        <h1 class="qf-page-title">
            <i class="bi bi-person-fill-add"></i> Registrar cliente
        </h1>
        <p class="qf-page-subtitle">
            Completa la información para registrar un nuevo cliente en QuiroFeet.
        </p>
    </div>
</div>

<div class="qf-form-wrapper">
    <div class="qf-form-card">
        <div class="qf-form-layout">

            <!-- Panel lateral con info -->
            <div class="qf-form-side">
                <div class="qf-form-side-icon">
                    <i class="bi bi-people-fill"></i>
                </div>
                <h2>Datos del cliente</h2>
                <p>
                    Registra clientes con su información de contacto para poder agendar citas,
                    registrar ventas y llevar el historial clínico en QuiroFeet.
                </p>

                <ul>
                    <li><i class="bi bi-check-circle-fill"></i> Validación de correo electrónico.</li>
                    <li><i class="bi bi-check-circle-fill"></i> Teléfono con 8 dígitos.</li>
                    <li><i class="bi bi-check-circle-fill"></i> Evita duplicados por cédula, correo o teléfono.</li>
                </ul>
            </div>

            <!-- Formulario principal -->
            <div class="qf-form-main">
                @using (Html.BeginForm("CreateClient", "Clientes", FormMethod.Post, new { @class = "qf-form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "qf-validation-summary" })

                    <div class="qf-form-grid">

                        <!-- Cédula -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="cedula">Cédula</label>
                            @Html.TextBoxFor(m => m.cedula, new
                            {
                                @class = "qf-form-control",
                                placeholder = "Ingrese la cédula",
                                maxlength = "20",
                                oninput = "this.value=this.value.replace(/[^0-9]/g,'');"
                            })
                            @Html.ValidationMessageFor(m => m.cedula, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- Nombre -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="nombre">Nombre completo</label>
                            @Html.TextBoxFor(m => m.nombre, new
                            {
                                @class = "qf-form-control",
                                placeholder = "Ingrese el nombre completo",
                                required = "required"
                            })
                            @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- Correo -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="correo">Correo electrónico</label>
                            @Html.TextBoxFor(m => m.correo, new
                            {
                                @class = "qf-form-control",
                                placeholder = "cliente@correo.com",
                                type = "email",
                                required = "required"
                            })
                            @Html.ValidationMessageFor(m => m.correo, "", new { @class = "qf-field-error" })
                        </div>

                        <!-- Teléfono -->
                        <div class="qf-form-group">
                            <label class="qf-form-label" for="telefono">Teléfono</label>
                            @Html.TextBoxFor(m => m.telefono, new
                            {
                                @class = "qf-form-control",
                                placeholder = "Ej: 88881234",
                                type = "tel",
                                pattern = "[0-9]{8}",
                                maxlength = "8",
                                minlength = "8",
                                title = "El número debe tener exactamente 8 dígitos.",
                                oninput = "this.value=this.value.replace(/[^0-9]/g,'');",
                                required = "required"
                            })
                            @Html.ValidationMessageFor(m => m.telefono, "", new { @class = "qf-field-error" })
                        </div>

                    </div>

                    <div class="qf-form-actions">
                        <button type="submit" class="qf-btn qf-btn-primary">
                            <i class="bi bi-check-lg"></i> Guardar cliente
                        </button>

                        <a href="@Url.Action("ClientIndex", "Clientes")" class="qf-btn qf-btn-secondary">
                            <i class="bi bi-x-lg"></i> Cancelar
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles{
    <style>
        /* ===== HEADER ===== */
        .qf-page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.75rem;
            gap: 1rem;
        }

        .qf-page-title {
            font-size: 2.3rem;
            margin: 0;
            color: #234449;
        }

            .qf-page-title i {
                margin-right: .5rem;
            }

        .qf-page-subtitle {
            margin: .25rem 0 0;
            color: #6B7280;
            font-size: .95rem;
        }

        /* ===== WRAPPER GENERAL ===== */
        .qf-form-wrapper {
            margin-bottom: 2.5rem;
        }

        /* ===== CARD DEL FORM ===== */
        .qf-form-card {
            background: #ffffff;
            border-radius: 22px;
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.10);
            padding: 2.2rem 2.4rem;
            max-width: 1150px; /* más ancho */
            width: 100%;
            margin: 0 auto; /* centrado horizontal */
        }

        .qf-form-layout {
            display: grid;
            grid-template-columns: minmax(260px, 340px) minmax(0, 1fr);
            gap: 2.2rem;
        }

        /* ===== PANEL LATERAL ===== */
        .qf-form-side {
            background: linear-gradient(145deg, #234449, #0FC57C);
            border-radius: 18px;
            padding: 1.6rem 1.5rem;
            color: #ECFEFF;
            display: flex;
            flex-direction: column;
            gap: .75rem;
        }

        .qf-form-side-icon {
            width: 46px;
            height: 46px;
            border-radius: 999px;
            background: rgba(255, 255, 255, 0.12);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: .25rem;
        }

            .qf-form-side-icon i {
                font-size: 1.6rem;
            }

        .qf-form-side h2 {
            font-size: 1.25rem;
            margin: 0;
        }

        .qf-form-side p {
            font-size: .9rem;
            margin: 0;
            opacity: 0.9;
        }

        .qf-form-side ul {
            list-style: none;
            padding-left: 0;
            margin: .75rem 0 0;
            display: flex;
            flex-direction: column;
            gap: .35rem;
            font-size: .86rem;
        }

        .qf-form-side li {
            display: flex;
            gap: .4rem;
            align-items: flex-start;
        }

            .qf-form-side li i {
                font-size: .95rem;
                margin-top: 1px;
            }

        /* ===== FORM PRINCIPAL ===== */
        .qf-form-main .qf-form {
            width: 100%;
        }

        .qf-validation-summary {
            margin-bottom: 1rem;
            padding: .7rem .9rem;
            border-radius: 10px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #b91c1c;
            font-size: .85rem;
        }

        .qf-form-grid {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 1.25rem 1.75rem;
        }

        .qf-form-group {
            display: flex;
            flex-direction: column;
            gap: .25rem;
        }

        .qf-form-label {
            font-size: .85rem;
            font-weight: 600;
            color: #4B5563;
        }

        .qf-form-control {
            width: 100%;
            padding: .55rem .8rem;
            border-radius: 10px;
            border: 1px solid #D1D5DB;
            font-size: .9rem;
            outline: none;
        }

            .qf-form-control:focus {
                border-color: #0FC57C;
                box-shadow: 0 0 0 1px rgba(15, 197, 124, 0.25);
            }

        .qf-field-error {
            font-size: .8rem;
            color: #dc2626;
        }

        .qf-form-actions {
            margin-top: 1.9rem;
            display: flex;
            gap: .75rem;
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        /* ===== BOTONES ESTÁNDAR ===== */
        .qf-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: .35rem;
            padding: .45rem 1.05rem;
            border-radius: 999px;
            border: none;
            font-size: .85rem;
            cursor: pointer;
            text-decoration: none;
            font-weight: 500;
            transition: background .15s, transform .1s, box-shadow .15s;
        }

        .qf-btn-primary {
            background: #0FC57C;
            color: #ffffff;
            box-shadow: 0 4px 10px rgba(15, 197, 124, 0.35);
        }

            .qf-btn-primary:hover {
                background: #0aa164;
                transform: translateY(-1px);
            }

        .qf-btn-secondary {
            background: #E5E7EB;
            color: #234449;
        }

            .qf-btn-secondary:hover {
                background: #d1d5db;
            }

        @@media (max-width: 992px) {
            .qf-form-card {
                padding: 1.8rem 1.6rem;
            }

            .qf-form-layout {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .qf-form-grid {
                grid-template-columns: 1fr;
            }

            .qf-form-actions {
                justify-content: flex-start;
            }
        }
    </style>
}

@section Scripts{
    <script>
        // Refuerzo extra: cédula y teléfono solo números
        (function () {
            var tel = document.getElementById("telefono");
            var ced = document.getElementById("cedula");

            if (tel) {
                tel.addEventListener("input", function () {
                    this.value = this.value.replace(/[^0-9]/g, "").slice(0, 8);
                });
            }
            if (ced) {
                ced.addEventListener("input", function () {
                    this.value = this.value.replace(/[^0-9]/g, "");
                });
            }
        })();
    </script>
}
