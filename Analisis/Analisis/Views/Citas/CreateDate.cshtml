@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Agendar Cita";
}

<div class="container">
    <h1>Agendar Cita</h1>
    <p>Por favor, completa el formulario para agendar una nueva cita el día  @ViewBag.Fecha</p>

    <form id="userForm" onsubmit="return handleSubmit(event)">
        <!-- Nombre Completo -->
        <div class="form-group">
            <label for="nombre">Cliente</label>
            <input type="text" class="form-control" id="nombre" placeholder="Ingrese el nombre completo" required>
        </div>

        <!-- Correo Electrónico -->
        <div class="form-group">
            <label for="correo">Hora</label>
            <input type="time" class="form-control" id="hora" required>
        </div>

        <div class="form-group">
            <label for="servicio">Servicio</label>
            <select class="form-control" id="servicio">
                <option>Servicio 1</option>
                <option>Servicio 2</option>
                <option>Servicio 3</option>
                <option>Servicio 4</option>
            </select>
        </div>

        <!-- Teléfono -->
        <div class="form-group">
            <label for="profesional">Profesional</label>
            <input type="text" class="form-control" id="profesional" placeholder="Ingrese el nombre del profesional" required>
        </div>

        <!-- Botones -->
        <button type="submit" class="btn btn-primary">Agendar Cita</button>
        <a href="/Citas/Calendar" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

<!-- Notificación Estilizada -->
<div id="notification" class="notification" style="display:none;">
    Cita Agendada Correctamente
</div>

<script>
    function handleSubmit(event) {
        event.preventDefault();
        const notification = document.getElementById('notification');
        notification.style.display = 'block';
        setTimeout(() => {
            notification.style.display = 'none';
            window.location.href = '/Citas/Calendar';
        }, 3000);
        return false;
    }
</script>

<!-- Estilos para Centrar y Expandir -->
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input, select {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }

    button, .btn-secondary {
        background-color: #3e77f8;
        border-color: #3e77f8;
        color: white;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        margin-right: 10px;
        text-decoration: none;
    }

        button:hover, .btn-secondary:hover {
            background-color: #234449;
        }

    .notification {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #4CAF50;
        color: white;
        padding: 15px 30px;
        border-radius: 8px;
        font-size: 16px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        z-index: 1000;
        animation: fadeInOut 3s ease;
    }

    @@keyframes fadeInOut {
        0% {
            opacity: 0;
        }

        10% {
            opacity: 1;
        }

        90% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }
</style>
