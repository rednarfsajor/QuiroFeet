@using System.Linq
@model List<Analisis.ViewModel.DateViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Eventos del Día";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="qf-page-header">
    <div>
        <h1 class="qf-page-title">
            <i class="bi bi-calendar-event"></i> Eventos del día @ViewBag.Fecha
        </h1>
        <p class="qf-page-subtitle">Detalles de citas programadas para la fecha seleccionada.</p>
    </div>

    <div class="qf-gap-1">
        <a href="CreateDate?fecha=@ViewBag.Fecha" class="qf-btn qf-btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar evento
        </a>

        <a href="Calendar" class="qf-btn qf-btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver al calendario
        </a>
    </div>
</div>

<div class="qf-table-card">
    <div class="qf-table-wrapper">
        <table class="qf-table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Cliente</th>
                    <th>Servicio</th>
                    <th>Profesional</th>
                    <th>Estado</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var cita in Model)
                    {
                        <tr onclick="location.href='@Url.Action("ModifyDate", "Citas", new { id = cita.id })'"
                            style="cursor:pointer;">
                            <td>@cita.fecha.ToString("dd/MM/yyyy")</td>
                            <td>@cita.hora</td>
                            <td>@cita.NombreCliente</td>
                            <td>@cita.NombreServicio</td>
                            <td>@cita.NombreProfesional</td>
                            <td>
                                @if (cita.Estado == "Pendiente")
                                {
                                    <span class="qf-badge qf-badge-warning">Pendiente</span>
                                }
                                else if (cita.Estado == "Completada")
                                {
                                    <span class="qf-badge qf-badge-success">Completada</span>
                                }
                                else if (cita.Estado == "Cancelada")
                                {
                                    <span class="qf-badge qf-badge-danger">Cancelada</span>
                                }
                                else
                                {
                                    <span class="qf-badge qf-badge-muted">@cita.Estado</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="qf-empty-row">
                            <i class="bi bi-info-circle"></i>
                            No hay eventos programados para este día.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <style>
        /* ======= HEADER GENERAL ======= */
        .qf-page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.8rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .qf-page-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
            color: #234449;
        }

            .qf-page-title i {
                margin-right: 0.5rem;
            }

        .qf-page-subtitle {
            margin-top: 4px;
            font-size: 0.95rem;
            color: #6b7280;
        }

        .qf-gap-1 {
            display: flex;
            gap: .5rem;
            flex-wrap: wrap;
        }

        /* ========= BOTONES ========= */
        .qf-btn {
            padding: .55rem 1.2rem;
            border-radius: 999px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: .4rem;
            cursor: pointer;
            border: none;
            transition: .15s;
        }

        .qf-btn-primary {
            background: #0FC57C;
            color: #fff;
            box-shadow: 0px 4px 10px rgba(15,197,124,.35);
        }

            .qf-btn-primary:hover {
                background: #0aa164;
                transform: translateY(-1px);
            }

        .qf-btn-secondary {
            background: #e5e7eb;
            color: #234449;
        }

            .qf-btn-secondary:hover {
                background: #d3d4d6;
            }

        /* ========= TABLA ========= */
        .qf-table-card {
            background: #ffffff;
            border-radius: 18px;
            padding: 1.5rem;
            box-shadow: 0 12px 30px rgba(15, 23, 42, 0.1);
        }

        .qf-table-wrapper {
            overflow-x: auto;
        }

        .qf-table {
            width: 100%;
            border-collapse: collapse;
            font-size: .9rem;
        }

            .qf-table thead tr {
                background: #234449;
                color: white;
            }

            .qf-table th,
            .qf-table td {
                padding: .85rem 1rem;
                border-bottom: 1px solid #e5e7eb;
            }

            .qf-table tbody tr:nth-child(odd) {
                background: #f9fafb;
            }

            .qf-table tbody tr:hover {
                background: #ECFEF3;
            }

        /* ======== BADGES ======== */
        .qf-badge {
            padding: 3px 10px;
            border-radius: 999px;
            font-size: .75rem;
            font-weight: 500;
            border: 1px solid;
        }

        .qf-badge-warning {
            color: #b45309;
            border-color: #fcd34d;
            background: #fff7ed;
        }

        .qf-badge-success {
            color: #166534;
            border-color: #86efac;
            background: #f0fdf4;
        }

        .qf-badge-danger {
            color: #991b1b;
            border-color: #fecaca;
            background: #fef2f2;
        }

        .qf-badge-muted {
            color: #374151;
            border-color: #d1d5db;
            background: #f9fafb;
        }

        /* FILA VACÍA */
        .qf-empty-row {
            padding: 2rem 0;
            text-align: center;
            color: #6b7280;
            font-size: .95rem;
        }

            .qf-empty-row i {
                font-size: 1.2rem;
                margin-right: 6px;
                color: #9ca3af;
            }

        @@media (max-width: 768px) {
            .qf-page-header {
                align-items: flex-start;
            }
        }
    </style>
}
