@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Recibos";
}

<div class="receipts-container">
    <h1>Gestión de Recibos</h1>
    <p>Seleccione una opción para continuar.</p>

    <div class="options">
        <!-- Botón para Ver Recibos -->
        <!-- Botón para Ver Recibos -->
        <a href="@Url.Action("ListReceipts", "Home")" class="option-card">
            <i class="fas fa-file-invoice"></i>
            <h3>Ver Recibos</h3>
            <p>Consulta la lista de recibos registrados en el sistema.</p>
        </a>

        <!-- Botón para Editar Recibos -->
        <a href="@Url.Action("EditReceipt", "Home")" class="option-card">
            <i class="fas fa-edit"></i>
            <h3>Editar Recibo</h3>
            <p>Modifica los detalles de un recibo emitido.</p>
        </a>

        <!-- Botón para Anular Recibos -->
        <a href="@Url.Action("ListAnularReceipt", "Home")" class="option-card">
            <i class="fas fa-trash-alt"></i>
            <h3>Anular Recibo</h3>
            <p>Anular un recibo del sistema.</p>
        </a>

    </div>
</div>

<!-- Estilos CSS -->
<style>
    .receipts-container {
        max-width: 800px;
        margin: 100px auto;
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2.5em;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 40px;
    }

    .options {
        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .option-card {
        width: 300px;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: #234449;
        transition: transform 0.3s;
    }

        .option-card:hover {
            transform: translateY(-10px);
            background-color: #e6f2f7;
        }

        .option-card i {
            font-size: 3em;
            color: #3e77f8;
            margin-bottom: 20px;
        }

    h3 {
        margin-bottom: 10px;
        font-size: 1.5em;
    }
</style>
