@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Recibos";
}

<div class="qf-shell">
    <div class="qf-hero">
        <div class="qf-hero-text">
            <h1 class="qf-title">
                <i class="bi bi-journal-check me-2"></i> Gestión de Recibos
            </h1>
            <p class="qf-subtitle">Selecciona una opción para continuar.</p>
        </div>

        <!-- Botón interactivo que redirige al panel principal -->
        <a href="@Url.Action("Index", "Home")" class="qf-hero-badge">
            <i class="bi bi-house-door me-2"></i> Volver al Panel Principal
        </a>

        <!-- decoraciones suaves -->
        <span class="qf-blob qf-blob-a"></span>
        <span class="qf-blob qf-blob-b"></span>
    </div>

    <div class="qf-grid">
        <!-- Ver Recibos -->
        <a href="@Url.Action("ListReceipts", "Recibos")" class="qf-card">
            <div class="qf-card-icon">
                <i class="bi bi-file-earmark-text"></i>
            </div>
            <div class="qf-card-body">
                <h3 class="qf-card-title">Ver Recibos</h3>
                <p class="qf-card-desc">Consulta la lista de recibos registrados en el sistema.</p>
            </div>
            <div class="qf-card-cta">
                <span>Entrar</span> <i class="bi bi-arrow-right-short"></i>
            </div>
            <span class="qf-sheen"></span>
        </a>
    </div>
</div>

<style>
    :root {
        --qf-bg: #f6f8f9;
        --qf-card: #ffffff;
        --qf-text: #1f2d2f;
        --qf-muted: #6b7a7d;
        --qf-primary: #14532D;
        --qf-primary-500: #1d6c41;
        --qf-info: #1b8da4;
        --qf-border: #e7edf1;
        --qf-shadow: 0 10px 30px rgba(15, 31, 28, .10);
    }

    body {
        font-family: 'Poppins', system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif;
    }

    .qf-shell {
        min-height: calc(100vh - 140px);
        background: var(--qf-bg);
        padding: clamp(20px, 3vw, 36px);
        display: grid;
        gap: 22px;
    }

    /* ===== Hero ===== */
    .qf-hero {
        position: relative;
        overflow: hidden;
        border-radius: 18px;
        padding: clamp(18px, 3.2vw, 28px);
        background: linear-gradient(135deg, rgba(20,83,45,.09), rgba(27,141,164,.08)), radial-gradient(1200px 300px at -10% -20%, rgba(20,83,45,.18) 0%, transparent 60%);
        border: 1px solid var(--qf-border);
        box-shadow: var(--qf-shadow);
        display: flex;
        align-items: end;
        justify-content: space-between;
        gap: 16px;
    }

    .qf-title {
        margin: 0;
        font-weight: 800;
        color: var(--qf-text);
        letter-spacing: .2px;
        font-size: clamp(1.4rem, 2.6vw, 2rem);
    }

    .qf-subtitle {
        margin: 4px 0 0;
        color: var(--qf-muted);
        font-size: .98rem;
    }

    /* ===== Botón del panel principal ===== */
    .qf-hero-badge {
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        background: #fff;
        border: 1px solid var(--qf-border);
        color: var(--qf-primary);
        font-weight: 700;
        padding: .6rem 1rem;
        border-radius: 12px;
        white-space: nowrap;
        box-shadow: 0 6px 14px rgba(20,83,45,.08);
        text-decoration: none;
        transition: all .2s ease;
    }

        .qf-hero-badge:hover {
            background: var(--qf-primary);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(20,83,45,.25);
        }

        .qf-hero-badge i {
            font-size: 1.2rem;
        }

    /* decoraciones */
    .qf-blob {
        position: absolute;
        pointer-events: none;
        filter: blur(26px);
        opacity: .35;
    }

    .qf-blob-a {
        width: 340px;
        height: 140px;
        left: -60px;
        top: -40px;
        background: #9fe4c0;
        transform: rotate(-12deg);
    }

    .qf-blob-b {
        width: 260px;
        height: 120px;
        right: -40px;
        top: -30px;
        background: #bfeaf1;
        transform: rotate(8deg);
    }

    /* ===== Grid de opciones ===== */
    .qf-grid {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: clamp(14px, 2vw, 22px);
    }

    /* ===== Card ===== */
    .qf-card {
        position: relative;
        isolation: isolate;
        text-decoration: none;
        border-radius: 16px;
        padding: 20px 18px;
        background: linear-gradient(180deg, rgba(255,255,255,.9), rgba(255,255,255,.86));
        backdrop-filter: blur(3px);
        border: 1px solid var(--qf-border);
        box-shadow: var(--qf-shadow);
        color: var(--qf-text);
        display: grid;
        grid-template-columns: auto 1fr auto;
        grid-template-areas: "icon body cta";
        align-items: center;
        gap: 14px;
        transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
    }

        .qf-card:hover {
            transform: translateY(-3px);
            border-color: #d8e5ea;
            box-shadow: 0 16px 34px rgba(17, 48, 39, .12);
        }

    .qf-card-icon {
        grid-area: icon;
        width: 56px;
        height: 56px;
        border-radius: 14px;
        display: grid;
        place-items: center;
        background: linear-gradient(135deg, #e5f3ec, #f0faf5);
        border: 1px solid #d8e9e1;
        color: var(--qf-primary);
        box-shadow: inset 0 1px 0 #fff;
        font-size: 1.6rem;
    }

    .qf-card-body {
        grid-area: body;
    }

    .qf-card-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: .2px;
        color: var(--qf-text);
    }

    .qf-card-desc {
        margin: 4px 0 0;
        font-size: .93rem;
        color: var(--qf-muted);
    }

    .qf-card-cta {
        grid-area: cta;
        align-self: center;
        background: #f1f6f3;
        border: 1px solid var(--qf-border);
        color: var(--qf-primary);
        font-weight: 800;
        padding: .45rem .7rem;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        gap: .2rem;
        transition: background .18s ease, color .18s ease, transform .18s ease;
        box-shadow: 0 6px 12px rgba(20,83,45,.06);
    }

    .qf-card:hover .qf-card-cta {
        background: var(--qf-primary);
        color: #fff;
        transform: translateX(2px);
    }

    /* brillo sutil */
    .qf-sheen {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: inherit;
        background: linear-gradient(120deg, transparent 30%, rgba(255,255,255,.4) 50%, transparent 70%);
        opacity: 0;
        transform: translateX(-30%);
        transition: transform .4s ease, opacity .4s ease;
        pointer-events: none;
        z-index: -1;
    }

    .qf-card:hover .qf-sheen {
        opacity: 1;
        transform: translateX(30%);
    }

    @@media (max-width: 720px) {
        .qf-hero {
            align-items: start;
        }
    }
</style>
