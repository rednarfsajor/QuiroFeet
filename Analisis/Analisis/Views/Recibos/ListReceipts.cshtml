@model List<Analisis.BD.Ventas>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Recibos";
}

<div class="receipts-container">
    <h1><i class="bi bi-receipt"></i> Lista de Recibos</h1>
    <p class="subtitle">Resumen de los recibos registrados en el sistema.</p>

    <table class="receipts-table">
        <thead>
            <tr>
                <th># Recibo</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Monto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var receipt in Model)
                {
                    var rowId = "row-" + receipt.id;
                    var isAnulado = receipt.Estado == "Anulado";

                    <tr id="@rowId">
                        <td>
                            <strong>@receipt.NumeroRecibo</strong>
                            @if (isAnulado)
                            {
                                <div class="text-anulado">Anulado</div>
                            }
                        </td>
                        <td>@(receipt.Clientes != null ? receipt.Clientes.nombre : "Sin nombre")</td>
                        <td>@(receipt.fecha?.ToString("dd/MM/yyyy hh:mm tt") ?? "Sin fecha")</td>
                        <td>₡@string.Format("{0:N2}", receipt.monto)</td>
                        <td id="acciones-@receipt.id">
                            <a href="@Url.Action("Details", "Recibos", new { id = receipt.id })" class="btn btn-details">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            @if (!isAnulado)
                            {
                                <button type="button" class="btn btn-cancel" onclick="anularRecibo(@receipt.id)">
                                    <i class="bi bi-x-circle"></i> Anular
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No hay recibos registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function anularRecibo(id) {
            if (!confirm("¿Estás seguro que deseas anular este recibo?")) return;

            $.ajax({
                url: '/Recibos/Anular/' + id,
                type: 'POST',
                success: function (data) {
                    if (data.success) {
                        const row = document.getElementById("row-" + id);
                        if (row) {
                            const numCell = row.querySelector("td:first-child");
                            const accionesTd = document.getElementById("acciones-" + id);
                            if (numCell && !numCell.querySelector('.text-anulado')) {
                                const span = document.createElement("div");
                                span.className = "text-anulado";
                                span.innerText = "Anulado";
                                numCell.appendChild(span);
                            }
                            if (accionesTd) {
                                accionesTd.innerHTML = '<a href="/Recibos/Details/' + id + '" class="btn btn-details"><i class="bi bi-eye"></i> Detalles</a>';
                            }
                        }
                    } else {
                        alert("No se pudo anular el recibo.");
                    }
                },
                error: function () {
                    alert("Error al intentar anular el recibo.");
                }
            });
        }
    </script>
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .receipts-container {
        max-width: 950px;
        margin: 60px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h1 {
        color: #234449;
        font-size: 2em;
        margin-bottom: 10px;
    }

    .subtitle {
        font-size: 1.1em;
        color: #666;
        margin-bottom: 30px;
    }

    .receipts-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95em;
    }

        .receipts-table th,
        .receipts-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        .receipts-table th {
            background-color: #234449;
            color: white;
        }

    .btn {
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 0.85em;
        text-decoration: none;
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        margin: 2px;
    }

    .btn-details {
        background-color: #17a2b8;
    }

    .btn-cancel {
        background-color: #dc3545;
        border: none;
        cursor: pointer;
    }

    .btn-details:hover {
        background-color: #138496;
    }

    .btn-cancel:hover {
        background-color: #c82333;
    }

    .text-anulado {
        color: #dc3545;
        font-size: 0.8em;
        font-weight: bold;
        margin-top: 4px;
    }
</style>
