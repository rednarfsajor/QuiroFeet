@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Recibo";
}

<div class="container">
    <h1>Editar Recibo</h1>
    <p>Modifique los detalles del recibo y guarde los cambios.</p>

    <form action="/Recibos/ConfirmReceiptUpdate" method="post">
        <!-- Número de Recibo -->
        <div class="form-group">
            <label for="numeroRecibo">Número de Recibo</label>
            <input type="text" class="form-control" id="numeroRecibo" value="123456" disabled>
        </div>

        <!-- Descripción del Servicio -->
        <div class="form-group">
            <label for="descripcion">Descripción del Servicio</label>
            <textarea class="form-control" id="descripcion" rows="4">Descripción actual del servicio</textarea>
        </div>

        <!-- Fecha de Emisión -->
        <div class="form-group">
            <label for="fechaEmision">Fecha de Emisión</label>
            <input type="date" class="form-control" id="fechaEmision" value="2024-03-30">
        </div>

        <!-- Botones -->
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="/Recibos/ListReceipts" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

<!-- Estilos CSS -->
<style>
    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #234449;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
    }

    button, a {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 1em;
        margin-right: 10px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #3e77f8;
        color: white;
        border: none;
    }

    .btn-secondary {
        background-color: #234449;
        color: white;
    }

    .btn-primary:hover {
        background-color: #234449;
    }

    .btn-secondary:hover {
        background-color: #3e77f8;
    }
</style>
