@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Confirmación de Anulación";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<div class="confirm-wrapper">
    <div class="confirm-card">

        <div class="icon-circle success">
            <i class="bi bi-check2-circle"></i>
        </div>

        <h1 class="confirm-title">Recibo anulado exitosamente</h1>

        <p class="confirm-text">
            El recibo <strong>#@ViewBag.ReceiptNumber</strong> ha sido anulado correctamente.
        </p>

        <p class="confirm-subtext">
            La anulación se ha registrado en el historial del sistema para futuras consultas.
        </p>

        <a href="/Recibos/ListReceipts" class="btn-back-list">
            <i class="bi bi-arrow-left-circle"></i> Volver al historial de recibos
        </a>

    </div>
</div>

<style>
    /* ===== CONTENEDOR GENERAL ===== */
    .confirm-wrapper {
        display: flex;
        justify-content: center;
        padding: 60px 20px;
    }

    .confirm-card {
        max-width: 520px;
        background: #ffffff;
        padding: 45px 40px 35px;
        border-radius: 18px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        text-align: center;
        animation: fadeInConfirm 0.45s ease-in-out;
    }

    /* ===== ICONO ===== */
    .icon-circle {
        width: 95px;
        height: 95px;
        border-radius: 50%;
        margin: 0 auto 18px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-circle.success {
        background: rgba(40, 167, 69, 0.12);
    }

    .icon-circle i {
        font-size: 52px;
    }

    .icon-circle.success i {
        color: #28a745;
    }

    /* ===== TEXTOS ===== */
    .confirm-title {
        font-size: 1.9rem;
        font-weight: 700;
        color: #234449;
        margin-bottom: 10px;
    }

    .confirm-text {
        font-size: 1.1rem;
        color: #34495e;
        margin-bottom: 6px;
    }

    .confirm-subtext {
        font-size: 0.97rem;
        color: #6c757d;
        margin-bottom: 26px;
    }

    /* ===== BOTÓN ===== */
    .btn-back-list {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 11px 22px;
        border-radius: 10px;
        background: #234449;
        color: #ffffff;
        text-decoration: none;
        font-size: 0.98rem;
        font-weight: 600;
        transition: 0.2s ease;
    }

    .btn-back-list i {
        font-size: 1.1rem;
    }

    .btn-back-list:hover {
        background: #1b2f37;
    }

    /* ===== ANIMACIÓN ===== */
    @@media fadeInConfirm {
        from { opacity: 0; transform: translateY(12px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
