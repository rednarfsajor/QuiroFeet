@model Analisis.BD.Servicios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Crear Servicio";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<div class="service-wrapper">
    <div class="service-card">

        <h1 class="title">
            <i class="bi bi-clipboard-plus"></i> Registrar Servicio
        </h1>
        <p class="subtitle">Complete el formulario para registrar un nuevo servicio.</p>

        @using (Html.BeginForm("CreateService", "Servicios", FormMethod.Post, new { @class = "form-area" }))
        {
            @Html.AntiForgeryToken()

            <!-- NOMBRE -->
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Nombre, new
                {
                    @class = "form-input",
                    placeholder = "Ingrese el nombre del servicio",
                    required = "required"
                })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "validation" })
            </div>

            <!-- DESCRIPCIÓN -->
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, new { @class = "form-label" })
                @Html.TextAreaFor(model => model.Descripcion, 4, 30, new
                {
                    @class = "form-input textarea",
                    placeholder = "Ingrese una descripción",
                    required = "required"
                })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "validation" })
            </div>

            <!-- DURACIÓN -->
            <div class="form-group">
                @Html.LabelFor(model => model.Duracion, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Duracion, new
                {
                    @class = "form-input",
                    placeholder = "Ejemplo: 1 hora",
                    required = "required"
                })
                @Html.ValidationMessageFor(model => model.Duracion, "", new { @class = "validation" })
            </div>

            <!-- PRECIO -->
            <div class="form-group">
                @Html.LabelFor(model => model.Precio, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.Precio, new
                {
                    @class = "form-input",
                    placeholder = "Ingrese el precio",
                    type = "number",
                    step = "any",
                    required = "required"
                })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "validation" })
            </div>

            <!-- BOTONES -->
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle-fill"></i> Registrar Servicio
                </button>
                <a href="@Url.Action("ListServices", "Servicios")" class="btn btn-secondary">
                    <i class="bi bi-x-circle-fill"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f3f5f7;
    }

    .service-wrapper {
        display: flex;
        justify-content: center;
        padding: 60px 20px;
    }

    .service-card {
        width: 100%;
        max-width: 550px;
        background: white;
        padding: 40px 35px;
        border-radius: 18px;
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.35s ease;
        text-align: center;
    }

    .title {
        font-size: 1.9rem;
        font-weight: 700;
        color: #234449;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .subtitle {
        color: #6b7280;
        font-size: 0.95rem;
        margin-bottom: 28px;
    }

    /* FORM */
    .form-group {
        text-align: left;
        margin-bottom: 22px;
    }

    .form-label {
        font-weight: 600;
        color: #234449;
        margin-bottom: 6px;
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 12px 14px;
        font-size: 0.95rem;
        border: 1px solid #d1d5db;
        border-radius: 10px;
        background: #f9fafb;
        outline: none;
        transition: 0.2s ease;
        font-family: inherit;
    }

    .form-input:focus {
        border-color: #234449;
        background: white;
        box-shadow: 0 0 0 3px rgba(35, 68, 73, 0.12);
    }

    .textarea {
        resize: vertical;
    }

    .validation {
        color: #dc3545;
        font-size: 0.85rem;
    }

    /* BUTTONS */
    .btn-group {
        display: flex;
        gap: 10px;
        margin-top: 25px;
    }

    .btn {
        flex: 1;
        display: inline-flex;
        gap: 8px;
        align-items: center;
        justify-content: center;
        padding: 12px 16px;
        border-radius: 12px;
        text-decoration: none;
        cursor: pointer;
        font-size: 0.95rem;
        font-weight: 600;
        transition: 0.2s ease;
    }

    .btn-primary {
        background: #234449;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background: #1b2f37;
    }

    .btn-secondary {
        background: #e5e7eb;
        color: #374151;
    }

    .btn-secondary:hover {
        background: #d1d5db;
    }

    /* ANIMATION */
    @@media fadeIn {
        from { opacity: 0; transform: translateY(12px); }
        to   { opacity: 1; transform: translateY(0); }
    }
</style>
