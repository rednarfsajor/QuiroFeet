@model IEnumerable<Tuple<Analisis.BD.Inventario, Analisis.BD.Productos>>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alertas de Stock";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="stock-alerts-wrapper container my-5">

    <!-- ENCABEZADO -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="page-title">
                <i class="bi bi-bell-fill me-2"></i>
                Alertas de stock
            </h2>
            <p class="page-subtitle">
                Revisa los productos que necesitan reabastecimiento pronto.
            </p>
        </div>

        <a href="@Url.Action("Inventario","Inventario")"
           class="btn btn-outline-secondary btn-back">
            <i class="bi bi-arrow-left-circle me-2"></i>
            Volver al inventario
        </a>
    </div>

    <!-- RESUMEN -->
    @if (Model != null && Model.Any())
    {
        <div class="summary-card mb-4">
            <div class="d-flex align-items-center">
                <div class="summary-icon me-3">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <div>
                    <h5 class="mb-1">Productos con bajo stock: @Model.Count()</h5>
                    <p class="mb-0 text-muted">
                        Te recomendamos revisar estos productos y generar una orden de compra si es necesario.
                    </p>
                </div>
            </div>
        </div>
    }

    <!-- MENSAJE SI NO HAY ALERTAS -->
    @if (Model == null || !Model.Any())
    {
        <div class="no-alerts-card text-center">
            <div class="no-alerts-icon mb-3">
                <i class="bi bi-emoji-smile"></i>
            </div>
            <h4 class="mb-2">Todo está bajo control</h4>
            <p class="mb-3 text-muted">
                No hay productos con bajo stock en este momento.
            </p>
            <a href="@Url.Action("Inventario","Inventario")" class="btn btn-primary">
                Ver inventario completo
            </a>
        </div>
    }
    else
    {
        <!-- TABLA DE ALERTAS -->
        <div class="card alerts-card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table mb-0 align-middle">
                        <thead>
                            <tr>
                                <th class="text-start">Producto</th>
                                <th class="text-center">Stock actual</th>
                                <th class="text-center">Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model)
                            {
                                var inventario = t.Item1;
                                var producto = t.Item2;

                                <tr class="low-stock-row">
                                    <td class="text-start">
                                        <div class="product-name">
                                            <i class="bi bi-cube me-2 text-muted"></i>
                                            <span>@producto.nombre</span>
                                        </div>
                                    </td>

                                    <td class="text-center">
                                        <span class="badge stock-badge">
                                            @inventario.stock
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        <span class="badge status-badge">
                                            <i class="bi bi-exclamation-octagon me-1"></i>
                                            Bajo stock
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .stock-alerts-wrapper {
        max-width: 980px;
        font-family: 'Poppins', sans-serif;
    }

    .page-title {
        font-size: 1.7rem;
        font-weight: 700;
        color: #234449;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
    }

        .page-title i {
            color: #f97316; /* naranja alerta */
            font-size: 1.5rem;
        }

    .page-subtitle {
        margin: 0;
        font-size: 0.95rem;
        color: #64748b;
    }

    .btn-back {
        border-radius: 999px;
        font-weight: 500;
        padding-inline: 18px;
    }

    .summary-card {
        background: #f1f5f9;
        border-radius: 14px;
        padding: 14px 18px;
    }

    .summary-icon {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        background: #f97316;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.3rem;
    }

    .no-alerts-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 32px 24px;
        box-shadow: 0 10px 25px rgba(15, 23, 42, 0.08);
        max-width: 520px;
        margin: 0 auto;
    }

    .no-alerts-icon {
        width: 70px;
        height: 70px;
        border-radius: 999px;
        background: #e0f2fe;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #2563eb;
        margin: 0 auto;
    }

    .alerts-card {
        border-radius: 16px;
        overflow: hidden;
    }

        .alerts-card .table thead {
            background: #f8fafc;
        }

            .alerts-card .table thead th {
                border-bottom: 1px solid #e2e8f0;
                font-weight: 600;
                font-size: 0.9rem;
                color: #475569;
                padding: 12px 16px;
            }

        .alerts-card .table tbody td {
            border-top: 1px solid #e2e8f0;
            padding: 12px 16px;
            font-size: 0.92rem;
        }

    .product-name {
        display: flex;
        align-items: center;
        color: #0f172a;
    }

    .stock-badge {
        background: #fef3c7;
        color: #92400e;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 999px;
    }

    .status-badge {
        background: #fee2e2;
        color: #b91c1c;
        font-weight: 600;
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 999px;
    }

    .low-stock-row {
        background-color: #fff;
        transition: background-color 0.2s ease, transform 0.1s ease;
    }

        .low-stock-row:hover {
            background-color: #f1f5f9;
            transform: translateY(-1px);
        }
</style>
