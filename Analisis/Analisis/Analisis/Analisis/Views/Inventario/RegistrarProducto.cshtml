@model Analisis.BD.Productos

@{
    ViewBag.Title = "Registrar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="full-page-container">
    <div class="form-container">
        <div class="form-header">
            <div>
                <h1><i class="bi bi-box-seam"></i> Nuevo Producto</h1>
                <p>Completa la información del producto para agregarlo al inventario.</p>
            </div>
        </div>

        @using (Html.BeginForm("RegistrarProducto", "Inventario", FormMethod.Post, new { @class = "formulario", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "validation-summary" })

            <div class="form-grid">
                <!-- Columna izquierda -->
                <div>
                    <!-- Nombre -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre)
                        <div class="input-icon">
                            <i class="bi bi-card-text"></i>
                            @Html.TextBoxFor(model => model.nombre, new
                            {
                                @class = "form-control",
                                placeholder = "Ej. Guantes de látex talla M",
                                required = "required",
                                autofocus = "autofocus"
                            })
                        </div>
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "field-validation-error" })
                    </div>

                    <!-- Proveedor -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_proveedor, "Proveedor")
                        <div class="input-icon">
                            <i class="bi bi-truck"></i>
                            @Html.DropDownListFor(model => model.id_proveedor,
                                ViewBag.IdProveedor as SelectList,
                                "-- Seleccione un proveedor --",
                                new { @class = "form-control", required = "required" })
                        </div>
                        @Html.ValidationMessageFor(model => model.id_proveedor, "", new { @class = "field-validation-error" })
                    </div>

                    <!-- Descripción -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcion)
                        <div class="input-icon textarea-icon">
                            <i class="bi bi-text-paragraph"></i>
                            @Html.TextAreaFor(model => model.descripcion, new
                            {
                                @class = "form-control",
                                rows = 4,
                                placeholder = "Descripción breve del producto (opcional)"
                            })
                        </div>
                        @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "field-validation-error" })
                    </div>
                </div>

                <!-- Columna derecha -->
                <div>
                    <!-- Precio -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.precio, "Precio (₡)")
                        <div class="input-icon">
                            <i class="bi bi-cash-coin"></i>
                            <span class="currency-prefix">₡</span>
                            @Html.TextBoxFor(model => model.precio, new
                            {
                                @class = "form-control",
                                type = "number",
                                step = "0.01",
                                placeholder = "Ej. 15000",
                                required = "required",
                                min = "0"
                            })
                        </div>
                        @Html.ValidationMessageFor(model => model.precio, "", new { @class = "field-validation-error" })
                    </div>

                    <!-- Stock inicial -->
                    <div class="form-group">
                        <label for="stock">Stock inicial</label>
                        <div class="input-icon">
                            <i class="bi bi-box-seam"></i>
                            <input type="number"
                                   name="stock"
                                   id="stock"
                                   class="form-control"
                                   min="0"
                                   placeholder="Ej. 10"
                                   required />
                        </div>
                    </div>

                    <!-- Puedes agregar aquí otros campos de inventario si luego los necesitas -->
                </div>
            </div>

            <!-- Botones -->
            <div class="form-buttons">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-check-circle-fill"></i> Guardar
                </button>

                <a href="@Url.Action("Inventario", "Inventario")" class="btn-cancel">
                    <i class="bi bi-x-circle-fill"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: url('@Url.Content("~/Imagenes/marmol2.jfif")') no-repeat center center fixed;
        background-size: cover;
    }

    .full-page-container {
        min-height: calc(100vh - 80px); /* respeta header del layout */
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    .form-container {
        background-color: rgba(255, 255, 255, 0.98);
        padding: 30px 30px 25px;
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        max-width: 900px;
        width: 100%;
    }

    .form-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 25px;
        gap: 10px;
    }

    .form-container h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #234449;
        margin: 0 0 5px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-container h1 i {
        font-size: 1.8rem;
    }

    .form-container p {
        color: #64748b;
        margin: 0;
        font-size: 0.95rem;
    }

    .validation-summary {
        color: #dc3545;
        margin-bottom: 15px;
        font-size: 0.9rem;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 24px 32px;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }

    .form-group {
        margin-bottom: 18px;
    }

    .form-group label {
        font-weight: 600;
        color: #234449;
        margin-bottom: 6px;
        display: block;
        font-size: 0.95rem;
    }

    .input-icon {
        display: flex;
        align-items: center;
        background-color: #f8fafc;
        border: 1px solid #cbd5e1;
        border-radius: 10px;
        padding: 6px 10px;
        transition: border-color 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
    }

    .textarea-icon {
        align-items: flex-start;
        padding-top: 10px;
    }

    .input-icon i {
        margin-right: 8px;
        color: #3e77f8;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .currency-prefix {
        margin-right: 6px;
        font-weight: 600;
        color: #234449;
        font-size: 0.95rem;
        flex-shrink: 0;
    }

    .input-icon input,
    .input-icon textarea,
    .input-icon select {
        border: none;
        outline: none;
        width: 100%;
        background-color: transparent;
        font-size: 0.95rem;
        font-family: 'Poppins', sans-serif;
        color: #0f172a;
    }

    .input-icon textarea {
        resize: vertical;
        min-height: 90px;
    }

    .input-icon:focus-within {
        border-color: #3b82f6;
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.18);
        background-color: #ffffff;
    }

    .form-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .btn-submit, .btn-cancel {
        min-width: 150px;
        text-align: center;
        padding: 10px 18px;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.25s ease;
        border: none;
        font-size: 0.95rem;
    }

    .btn-submit {
        background-color: #3e77f8;
        color: white;
    }

    .btn-submit:hover {
        background-color: #234449;
        transform: translateY(-1px);
        box-shadow: 0 8px 18px rgba(37, 99, 235, 0.35);
    }

    .btn-cancel {
        background-color: #e2e8f0;
        color: #1e293b;
    }

    .btn-cancel:hover {
        background-color: #cbd5e1;
        transform: translateY(-1px);
    }

    .field-validation-error {
        color: #dc3545;
        font-size: 0.85rem;
        margin-top: 4px;
    }
</style>
