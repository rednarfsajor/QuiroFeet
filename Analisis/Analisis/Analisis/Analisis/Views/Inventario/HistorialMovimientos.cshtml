@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Historial de Movimientos";

    var movimientos = ViewBag.Movimientos as IEnumerable<dynamic>;
    bool hayMovimientos = movimientos != null && movimientos.Any();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />

<div class="movements-wrapper container my-5">

    <!-- ENCABEZADO -->
    <div class="movements-header d-flex justify-content-between align-items-center flex-wrap mb-3">
        <div class="mb-2">
            <h2 class="movements-title">
                <i class="bi bi-clock-history me-2"></i> Historial de movimientos
            </h2>
            <p class="movements-subtitle">
                Revisa los cambios de inventario registrados en el sistema.
            </p>
        </div>

        <a href="@Url.Action("Inventario", "Inventario")"
           class="btn btn-back">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver al inventario
        </a>
    </div>

    <!-- SI NO HAY DATOS -->
    @if (!hayMovimientos)
    {
        <div class="no-movements-card text-center">
            <div class="no-movements-icon mb-3">
                <i class="bi bi-clipboard-x"></i>
            </div>
            <h4 class="mb-2">No hay movimientos registrados</h4>
            <p class="mb-0 text-muted">
                Aún no se han registrado ingresos o salidas en el inventario.
            </p>
        </div>
    }
    else
    {
        <!-- TARJETA CON TABLA -->
        <div class="card shadow-sm border-0 movements-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="text-start">Fecha</th>
                                <th class="text-center">Tipo</th>
                                <th class="text-center">Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in movimientos)
                            {
                                <tr>
                                    <td class="text-start">
                                        @m.fecha.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        @if (m.tipo == "Ingreso")
                                        {
                                            <span class="badge badge-ingreso">
                                                <i class="bi bi-box-arrow-in-down me-1"></i> Ingreso
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-salida">
                                                <i class="bi bi-box-arrow-up me-1"></i> Salida
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="cantidad-text fw-semibold">
                                            @m.cantidad
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .movements-wrapper {
        max-width: 900px;
        font-family: 'Poppins', sans-serif;
    }

    .movements-title {
        font-size: 1.7rem;
        font-weight: 700;
        color: #234449;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
    }

        .movements-title i {
            font-size: 1.6rem;
        }

    .movements-subtitle {
        margin: 0;
        font-size: 0.95rem;
        color: #64748b;
    }

    .btn-back {
        border-radius: 999px;
        font-weight: 500;
        padding: 8px 18px;
        border: 1px solid #cbd5e1;
        background-color: #e2e8f0;
        color: #1e293b;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.2s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            background-color: #cbd5e1;
            border-color: #94a3b8;
            transform: translateY(-1px);
        }

    .movements-card {
        border-radius: 16px;
        overflow: hidden;
        background: #ffffff;
    }

        .movements-card thead {
            background: #f8fafc;
        }

            .movements-card thead th {
                border-bottom: 1px solid #e2e8f0;
                font-weight: 600;
                font-size: 0.9rem;
                color: #475569;
                padding: 11px 14px;
            }

        .movements-card tbody td {
            border-top: 1px solid #e2e8f0;
            padding: 11px 14px;
            font-size: 0.93rem;
            color: #0f172a;
        }

        .movements-card tbody tr:hover {
            background-color: #f1f5f9;
            transition: background-color 0.2s ease;
        }

    .badge-ingreso {
        background: #dcfce7;
        color: #166534;
        font-weight: 600;
        font-size: 0.85rem;
        padding: 6px 12px;
        border-radius: 999px;
    }

    .badge-salida {
        background: #fee2e2;
        color: #b91c1c;
        font-weight: 600;
        font-size: 0.85rem;
        padding: 6px 12px;
        border-radius: 999px;
    }

    .cantidad-text {
        color: #111827;
        font-size: 0.95rem;
    }

    .no-movements-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 28px 22px;
        box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
        max-width: 520px;
        margin: 20px auto 0;
    }

    .no-movements-icon {
        width: 64px;
        height: 64px;
        border-radius: 999px;
        background: #e0f2fe;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: #2563eb;
        margin: 0 auto;
    }
</style>
