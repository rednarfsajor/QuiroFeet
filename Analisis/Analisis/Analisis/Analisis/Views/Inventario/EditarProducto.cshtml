@model Analisis.BD.Productos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Editar Producto";
}

<div class="container my-5" style="max-width: 650px; font-family: 'Poppins', sans-serif;">

    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color:#234449;">
            <i class="bi bi-pencil-square me-2"></i>Editar Producto
        </h2>
        <p class="text-muted">Actualiza los datos del producto y su inventario</p>
    </div>

    <div class="card shadow-sm border-0 p-4" style="border-radius:18px;">
        @using (Html.BeginForm("EditarProducto", "Inventario", FormMethod.Post, new { @class = "w-100", autocomplete = "off" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id)

            <!-- Nombre -->
            <div class="mb-3">
                <label class="form-label fw-bold">Nombre</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-card-text"></i>
                    </span>
                    @Html.TextBoxFor(model => model.nombre, new
                    {
                        @class = "form-control",
                        placeholder = "Ej. Producto XYZ",
                        required = "required",
                        autofocus = "autofocus"
                    })
                </div>
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger small" })
            </div>

            <!-- Proveedor -->
            <div class="mb-3">
                <label class="form-label fw-bold">Proveedor</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-truck"></i>
                    </span>
                    @Html.DropDownListFor(model => model.id_proveedor,
                        ViewBag.IdProveedor as SelectList,
                        "-- Seleccione un proveedor --",
                        new { @class = "form-control", required = "required" })
                </div>
                @Html.ValidationMessageFor(model => model.id_proveedor, "", new { @class = "text-danger small" })
            </div>

            <!-- Descripción -->
            <div class="mb-3">
                <label class="form-label fw-bold">Descripción</label>
                <div class="input-group">
                    <span class="input-group-text bg-light align-items-start">
                        <i class="bi bi-text-paragraph"></i>
                    </span>
                    @Html.TextAreaFor(model => model.descripcion, new
                    {
                        @class = "form-control",
                        rows = 3,
                        placeholder = "Descripción del producto (opcional)"
                    })
                </div>
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger small" })
            </div>

            <!-- Precio -->
            <div class="mb-3">
                <label class="form-label fw-bold">Precio</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-currency-dollar"></i>
                    </span>
                    @Html.TextBoxFor(model => model.precio, new
                    {
                        @class = "form-control",
                        type = "number",
                        step = "0.01",
                        min = "0",
                        placeholder = "Ej. 99.99",
                        required = "required"
                    })
                </div>
                @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger small" })
            </div>

            <hr class="my-4" />

            <!-- Título Inventario -->
            <h4 class="text-center mb-3" style="color:#234449;">Inventario</h4>

            <!-- Stock -->
            <div class="mb-3">
                <label class="form-label fw-bold">Stock</label>
                <div class="input-group">
                    <span class="input-group-text bg-light">
                        <i class="bi bi-box-seam"></i>
                    </span>
                    <input type="number"
                           name="stock"
                           class="form-control"
                           value="@((ViewBag.Inventario != null) ? ViewBag.Inventario.stock : 0)"
                           min="0"
                           required />
                </div>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between mt-4">
                <a href="@Url.Action("Inventario", "Inventario")"
                   class="btn btn-outline-secondary px-4 py-2 rounded-3">
                    <i class="bi bi-arrow-left-circle me-2"></i>Cancelar
                </a>

                <button type="submit"
                        class="btn text-white px-4 py-2 rounded-3"
                        style="background:#3e77f8;">
                    <i class="bi bi-check-circle-fill me-2"></i>Guardar Cambios
                </button>
            </div>
        }
    </div>
</div>

<style>
    .form-control:focus {
        border-color: #3e77f8 !important;
        box-shadow: 0 0 6px rgba(62, 119, 248, 0.4) !important;
    }

    .input-group-text i {
        color: #3e77f8;
        font-size: 1.2rem;
    }
</style>
