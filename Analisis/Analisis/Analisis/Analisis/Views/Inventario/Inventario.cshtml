@model IEnumerable<Analisis.BD.Productos>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Inventario";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="inventory-wrapper container my-5">

    <!-- ENCABEZADO -->
    <div class="inventory-header d-flex justify-content-between align-items-center flex-wrap mb-3">
        <div class="mb-2">
            <h2 class="inventory-title">
                <i class="bi bi-box-seam me-2"></i> Inventario
            </h2>
            <p class="inventory-subtitle">
                Administra los productos disponibles en QuiroFeet.
            </p>
        </div>

        <div class="inventory-actions d-flex flex-wrap gap-2">
            <a href="@Url.Action("RegistrarProducto", "Inventario")" class="btn btn-primary btn-sm inventory-btn">
                <i class="bi bi-plus-circle-fill me-1"></i> Registrar producto
            </a>
            <a href="@Url.Action("HistorialMovimientos", "Inventario")" class="btn btn-outline-secondary btn-sm inventory-btn">
                <i class="bi bi-clock-history me-1"></i> Historial
            </a>
            <a href="@Url.Action("AlertasStock", "Inventario")" class="btn btn-outline-warning btn-sm inventory-btn">
                <i class="bi bi-exclamation-triangle-fill me-1"></i> Alertas
            </a>
            <a href="@Url.Action("CrearOrdenCompra", "OrdenCompra")" class="btn btn-outline-primary btn-sm inventory-btn">
                <i class="bi bi-file-earmark-plus-fill me-1"></i> Orden de compra
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="no-products-card text-center">
            <div class="no-products-icon mb-3">
                <i class="bi bi-box"></i>
            </div>
            <h4 class="mb-2">No hay productos registrados</h4>
            <p class="mb-3 text-muted">
                Comienza registrando tu primer producto para llevar el control del inventario.
            </p>
            <a href="@Url.Action("RegistrarProducto", "Inventario")" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Registrar producto
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 inventory-card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="text-start">Nombre</th>
                                <th class="text-start">Descripción</th>
                                <th class="text-center" style="width: 190px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-cube text-muted me-2"></i>
                                            <span class="fw-semibold">@item.nombre</span>
                                        </div>
                                    </td>
                                    <td class="text-start text-muted">
                                        @(string.IsNullOrWhiteSpace(item.descripcion) ? "--" : item.descripcion)
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("EditarProducto", "Inventario", new { id = item.id })"
                                           class="btn btn-sm btn-outline-primary me-1"
                                           title="Editar">
                                            <i class="bi bi-pencil-square me-1"></i> Editar
                                        </a>

                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger btn-inactivar"
                                                data-id="@item.id"
                                                title="Inactivar">
                                            <i class="bi bi-slash-circle me-1"></i> Inactivar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const botonesInactivar = document.querySelectorAll(".btn-inactivar");
        const baseUrl = '@Url.Action("InactivarProducto", "Inventario", new { id = "__id__" })';

        botonesInactivar.forEach(btn => {
            btn.addEventListener("click", function () {
                const productoId = this.getAttribute("data-id");

                Swal.fire({
                    title: '¿Inactivar producto?',
                    text: "El producto se marcará como inactivo y no podrá usarse en nuevas órdenes.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#234449',
                    cancelButtonColor: '#9ca3af',
                    confirmButtonText: 'Sí, inactivar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const url = baseUrl.replace("__id__", productoId);
                        window.location.href = url;
                    }
                });
            });
        });
    });
</script>

<style>
    .inventory-wrapper {
        max-width: 1000px;
        font-family: 'Poppins', sans-serif;
    }

    .inventory-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #234449;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
    }

        .inventory-title i {
            font-size: 1.7rem;
        }

    .inventory-subtitle {
        margin: 0;
        font-size: 0.95rem;
        color: #64748b;
    }

    .inventory-btn {
        border-radius: 999px;
        font-weight: 500;
        padding-inline: 14px;
    }

    .inventory-card {
        border-radius: 16px;
        overflow: hidden;
    }

        .inventory-card thead {
            background: #f8fafc;
        }

            .inventory-card thead th {
                border-bottom: 1px solid #e2e8f0;
                font-weight: 600;
                font-size: 0.9rem;
                color: #475569;
                padding: 11px 14px;
            }

        .inventory-card tbody td {
            border-top: 1px solid #e2e8f0;
            padding: 11px 14px;
            font-size: 0.93rem;
        }

        .inventory-card tbody tr:hover {
            background-color: #f1f5f9;
            transition: background-color 0.15s ease;
        }

    .no-products-card {
        background: #ffffff;
        border-radius: 18px;
        padding: 32px 24px;
        box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
        max-width: 520px;
        margin: 30px auto 0;
    }

    .no-products-icon {
        width: 70px;
        height: 70px;
        border-radius: 999px;
        background: #e0f2fe;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #2563eb;
        margin: 0 auto;
    }
</style>
