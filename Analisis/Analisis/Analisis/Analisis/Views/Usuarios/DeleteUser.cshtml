@model Analisis.BD.Usuarios

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Eliminar usuario";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="user-delete-wrapper">
    <div class="user-delete-card">
        <div class="user-delete-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>

        <h1 class="user-delete-title">Eliminar usuario</h1>

        <p class="user-delete-text">
            ¿Estás seguro de que deseas eliminar al usuario
            <strong>@Model.Nombre</strong>?<br />
            Esta acción <strong>no se puede deshacer</strong>.
        </p>

        @using (Html.BeginForm("ConfirmDeleteUser", "Usuarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="user-delete-actions">
                <button type="submit" class="btn-confirm-delete">
                    <i class="bi bi-trash-fill me-1"></i> Eliminar
                </button>

                <a href="@Url.Action("ListUser", "Usuarios")" class="btn-cancel-delete">
                    <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                </a>
            </div>
        }
    </div>
</div>

<style>
    .user-delete-wrapper {
        min-height: calc(100vh - 80px);
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 16px;
        background-color: #f3f6fb;
        font-family: 'Poppins', sans-serif;
    }

    .user-delete-card {
        max-width: 540px;
        width: 100%;
        background-color: #ffffff;
        padding: 34px 30px 30px;
        border-radius: 20px;
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    .user-delete-icon {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        margin: 0 auto 16px;
        background-color: #fff1e6;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .user-delete-icon i {
        font-size: 2rem;
        color: #e67e22;
    }

    .user-delete-title {
        color: #234449;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .user-delete-text {
        font-size: 0.98rem;
        color: #5f6b73;
        margin-bottom: 26px;
        line-height: 1.5;
    }

    .user-delete-actions {
        display: flex;
        justify-content: center;
        gap: 12px;
        flex-wrap: wrap;
    }

    .btn-confirm-delete,
    .btn-cancel-delete {
        min-width: 150px;
        padding: 10px 20px;
        border-radius: 999px;
        border: none;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.2s ease, box-shadow 0.2s ease, transform 0.05s ease;
    }

    .btn-confirm-delete {
        background-color: #e74c3c;
        color: #ffffff;
        box-shadow: 0 4px 10px rgba(231, 76, 60, 0.45);
    }

    .btn-confirm-delete:hover {
        background-color: #c0392b;
        box-shadow: 0 4px 12px rgba(192, 57, 43, 0.55);
        transform: translateY(-1px);
    }

    .btn-cancel-delete {
        background-color: #dfe5ea;
        color: #234449;
    }

    .btn-cancel-delete:hover {
        background-color: #cfd7de;
        transform: translateY(-1px);
    }

    @@media (max-width: 576px) {
        .user-delete-card {
            padding: 28px 20px 24px;
        }

        .user-delete-title {
            font-size: 1.5rem;
        }
    }
</style>
