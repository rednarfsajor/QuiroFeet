@model IEnumerable<Analisis.BD.Usuarios>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Usuarios Inactivos";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="inactive-wrapper">

    <div class="inactive-header">
        <div class="header-icon">
            <i class="bi bi-person-dash-fill"></i>
        </div>
        <h1>Usuarios Inactivos</h1>
        <p>Listado de usuarios actualmente desactivados en el sistema.</p>
    </div>

    @if (TempData["ActivateSuccess"] != null)
    {
        <div class="alert-success-box">
            <i class="bi bi-check-circle-fill"></i> @TempData["ActivateSuccess"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="modern-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th style="width:140px;">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@(item.Roles != null ? item.Roles.Nombre : "Sin Rol")</td>
                        <td>
                            @using (Html.BeginForm("ActivarUser", "Usuarios", FormMethod.Post, new { @class = "activar-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.Id)

                                <button type="button"
                                        class="btn-activate btn-activar"
                                        data-nombre="@item.Nombre">
                                    <i class="bi bi-person-check-fill"></i> Activar
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-data-box">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No hay usuarios inactivos registrados.
        </div>
    }
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f6f9;
    }

    .inactive-wrapper {
        max-width: 980px;
        margin: 60px auto;
        background: #fff;
        padding: 40px;
        border-radius: 18px;
        box-shadow: 0 8px 18px rgba(0,0,0,0.10);
    }

    .inactive-header {
        text-align: center;
        margin-bottom: 25px;
    }

    .header-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: #ffe8e8;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
    }

        .header-icon i {
            font-size: 2.4rem;
            color: #d9534f;
        }

    h1 {
        font-size: 2rem;
        color: #234449;
        font-weight: 700;
    }

    p {
        color: #6c757d;
        margin-top: 5px;
    }

    .alert-success-box {
        background: #e5f7ec;
        color: #1f6b3e;
        border: 1px solid #c9ecd4;
        padding: 14px;
        border-radius: 12px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
        justify-content: center;
        font-weight: 600;
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 0.95rem;
    }

        .modern-table th {
            background: #234449;
            color: white;
            padding: 14px;
            font-weight: 600;
        }

        .modern-table td {
            text-align: center;
            padding: 12px;
            border-bottom: 1px solid #e6e6e6;
            background: #ffffff;
        }

        .modern-table tr:hover td {
            background: #f2f6fc;
        }

    .btn-activate {
        background: #28a745;
        color: white;
        border: none;
        padding: 8px 14px;
        border-radius: 8px;
        font-size: .9rem;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: all 0.3s ease;
    }

        .btn-activate:hover {
            background: #218838;
            transform: translateY(-2px);
        }

    .no-data-box {
        margin-top: 35px;
        background: #fff0f0;
        color: #b23b3b;
        padding: 16px 24px;
        border-radius: 12px;
        border: 1px solid #f3c6c6;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        justify-content: center;
    }

        .no-data-box i {
            font-size: 1.4rem;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const botones = document.querySelectorAll(".btn-activar");

        botones.forEach(btn => {
            btn.addEventListener("click", function () {
                const nombre = this.getAttribute("data-nombre");
                const form = this.closest("form");

                Swal.fire({
                    title: "¿Activar usuario?",
                    text: "El usuario " + nombre + " será activado nuevamente.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#234449",
                    cancelButtonColor: "#aaa",
                    confirmButtonText: "Sí, activar",
                    cancelButtonText: "Cancelar"
                }).then(result => {
                    if (result.isConfirmed && form) {
                        form.submit(); // usa el AntiForgeryToken que ya está en el form
                    }
                });
            });
        });
    });
</script>
