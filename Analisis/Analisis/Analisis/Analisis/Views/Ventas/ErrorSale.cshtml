@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Gestión de Ventas";
}

<div class="sales-container">
    <div class="sales-header">
        <div>
            <h1><i class="bi bi-graph-up-arrow"></i> Gestión de Ventas</h1>
            <p>Seleccione una de las opciones para registrar o consultar ventas.</p>
        </div>
        <div class="sales-badge">
            <i class="bi bi-cash-stack"></i> Módulo de Ventas
        </div>
    </div>

    <div class="options">
        <!-- Registrar Venta de Productos -->
        <a href="@Url.Action("RegisterSale", "Ventas")" class="option-card">
            <div class="option-icon-wrapper products">
                <i class="bi bi-cart-plus-fill"></i>
            </div>
            <h3>Venta de Productos</h3>
            <p>Registra una nueva venta con control de stock de productos del inventario.</p>
            <span class="option-link">
                Ir a venta de productos <i class="bi bi-arrow-right"></i>
            </span>
        </a>

        <!-- Registrar Venta de Servicios -->
        <a href="@Url.Action("RegisterServiceSale", "Ventas")" class="option-card">
            <div class="option-icon-wrapper services">
                <i class="bi bi-person-badge-fill"></i>
            </div>
            <h3>Venta de Servicios</h3>
            <p>Registra una venta de servicios brindados por los profesionales.</p>
            <span class="option-link">
                Ir a venta de servicios <i class="bi bi-arrow-right"></i>
            </span>
        </a>

        <!-- Consultar Ventas -->
        <a href="@Url.Action("ListSales", "Ventas")" class="option-card">
            <div class="option-icon-wrapper history">
                <i class="bi bi-receipt-cutoff"></i>
            </div>
            <h3>Consultar Ventas</h3>
            <p>Consulta el historial, estado y detalles de las ventas realizadas.</p>
            <span class="option-link">
                Ver listado de ventas <i class="bi bi-arrow-right"></i>
            </span>
        </a>
    </div>
</div>

<style>
    .sales-container {
        max-width: 1100px;
        margin: 70px auto;
        padding: 0 20px 40px;
        font-family: 'Poppins', sans-serif;
        color: #234449;
    }

    .sales-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 18px;
        margin-bottom: 32px;
    }

        .sales-header h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 6px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .sales-header h1 i {
                font-size: 1.8rem;
            }

        .sales-header p {
            font-size: 0.98rem;
            color: #555;
            margin: 0;
        }

    .sales-badge {
        background: #e3f5f3;
        color: #234449;
        padding: 8px 16px;
        border-radius: 999px;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    }

    .options {
        display: grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 24px;
    }

    .option-card {
        background-color: #ffffff;
        padding: 26px 24px;
        border-radius: 16px;
        box-shadow: 0 10px 26px rgba(0, 0, 0, 0.06);
        text-decoration: none;
        color: #234449;
        transition: transform 0.18s ease, box-shadow 0.18s ease, border-color 0.18s ease;
        border: 1px solid transparent;
        display: flex;
        flex-direction: column;
        gap: 10px;
        position: relative;
        overflow: hidden;
    }

        .option-card::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at top right, rgba(62, 119, 248, 0.12), transparent 55%);
            opacity: 0;
            transition: opacity 0.25s ease;
            pointer-events: none;
        }

        .option-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.12);
            border-color: #d3e3ea;
        }

            .option-card:hover::before {
                opacity: 1;
            }

    .option-icon-wrapper {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 6px;
    }

        .option-icon-wrapper.products {
            background: #e6f2ff;
        }

        .option-icon-wrapper.services {
            background: #f3f0ff;
        }

        .option-icon-wrapper.history {
            background: #fff4e5;
        }

        .option-icon-wrapper i {
            font-size: 1.8rem;
        }

    .option-card h3 {
        margin: 4px 0;
        font-size: 1.18rem;
        font-weight: 600;
    }

    .option-card p {
        font-size: 0.95rem;
        color: #555;
        margin: 0;
        flex: 1;
    }

    .option-link {
        margin-top: 10px;
        font-size: 0.9rem;
        color: #3e77f8;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-weight: 500;
    }

        .option-link i {
            font-size: 1rem;
        }

    @@media (max-width: 992px) {
        .options {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .sales-container {
            margin: 40px auto;
        }

        .sales-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .options {
            grid-template-columns: 1fr;
        }

        .option-card {
            padding: 22px 20px;
        }
    }

    @@media (max-width: 480px) {
        .sales-header h1 {
            font-size: 1.8rem;
        }
    }
</style>
