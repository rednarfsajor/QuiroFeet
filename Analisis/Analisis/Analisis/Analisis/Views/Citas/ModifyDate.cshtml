@model Analisis.BD.Citas

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Modificar Cita";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm border-0 edit-appointment-card">
                <div class="card-body">
                    <!-- Encabezado -->
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
                        <div>
                            <h2 class="mb-1 title-edit">
                                <i class="bi bi-pencil-square me-2"></i>
                                Modificar cita
                            </h2>
                            <p class="text-muted mb-0">
                                Actualice la hora, servicio, cliente o profesional de la cita seleccionada.
                            </p>
                        </div>
                        <div class="mt-3 mt-md-0 text-md-end">
                            <a href="@Url.Action("Calendar", "Citas")"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left-circle me-1"></i> Volver al calendario
                            </a>
                        </div>
                    </div>

                    @using (Html.BeginForm("ModifyDate", "Citas", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.id)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Fecha (solo lectura) -->
                        <div class="mb-3">
                            @Html.LabelFor(model => model.fecha, "Fecha", htmlAttributes: new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar-event"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       value="@Model.fecha.ToString("dd/MM/yyyy")"
                                       readonly="readonly" />
                            </div>
                            @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
                        </div>

                        <!-- Hora -->
                        <div class="mb-3">
                            @Html.LabelFor(model => model.hora, "Hora", htmlAttributes: new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-clock"></i>
                                </span>
                                @Html.TextBoxFor(model => model.hora, new
                                {
                                    @class = "form-control",
                                    type = "time",
                                    min = "07:00",
                                    max = "19:00",
                                    step = "900",
                                    required = "required"
                                })
                            </div>
                            @Html.ValidationMessageFor(model => model.hora, "", new { @class = "text-danger" })
                        </div>

                        <!-- Servicio -->
                        <div class="mb-3">
                            @Html.LabelFor(model => model.id_servicio, "Servicio", htmlAttributes: new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-heart-pulse"></i>
                                </span>
                                @Html.DropDownListFor(model => model.id_servicio,
                                    ViewBag.Servicios as SelectList,
                                    "-- Seleccione un servicio --",
                                    new { @class = "form-select", required = "required" })
                            </div>
                            @Html.ValidationMessageFor(model => model.id_servicio, "", new { @class = "text-danger" })
                        </div>

                        <!-- Cliente -->
                        <div class="mb-3">
                            @Html.LabelFor(model => model.id_cliente, "Cliente", htmlAttributes: new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-circle"></i>
                                </span>
                                @Html.DropDownListFor(model => model.id_cliente,
                                    ViewBag.Clientes as SelectList,
                                    "-- Seleccione un cliente --",
                                    new { @class = "form-select", required = "required" })
                            </div>
                            @Html.ValidationMessageFor(model => model.id_cliente, "", new { @class = "text-danger" })
                        </div>

                        <!-- Profesional -->
                        <div class="mb-4">
                            @Html.LabelFor(model => model.id_profesional, "Profesional", htmlAttributes: new { @class = "form-label fw-semibold" })
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-badge"></i>
                                </span>
                                @Html.DropDownListFor(model => model.id_profesional,
                                    ViewBag.Profesionales as SelectList,
                                    "-- Seleccione un profesional --",
                                    new { @class = "form-select", required = "required" })
                            </div>
                            @Html.ValidationMessageFor(model => model.id_profesional, "", new { @class = "text-danger" })
                        </div>

                        <!-- Botones -->
                        <div class="d-flex flex-wrap gap-2">
                            <button type="submit" class="btn btn-primary btn-main">
                                <i class="bi bi-check-circle-fill me-1"></i> Guardar cambios
                            </button>

                            <a href="@Url.Action("ProcessDate", "Citas", new { id = Model.id })"
                               class="btn btn-success">
                                <i class="bi bi-play-circle-fill me-1"></i> Procesar cita
                            </a>

                            <a href="@Url.Action("CancelDate", "Citas", new { id = Model.id })"
                               class="btn btn-danger">
                                <i class="bi bi-x-circle-fill me-1"></i> Cancelar cita
                            </a>
                        </div>
                    }

                    <!-- Notificación -->
                    @if (TempData["MensajeCitaModificada"] != null)
                    {
                        <div class="alert alert-success mt-4 mb-0">
                            <i class="bi bi-check2-circle me-1"></i>
                            @TempData["MensajeCitaModificada"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .edit-appointment-card {
        border-radius: 16px;
        background: #ffffff;
    }

    .title-edit {
        font-size: 1.5rem;
        color: #234449;
        font-weight: 600;
    }

    .form-label {
        color: #234449;
        font-size: 0.95rem;
    }

    .input-group-text {
        background-color: #f3f6fb;
        border-right: 0;
    }

    .form-control,
    .form-select {
        border-left: 0;
        border-radius: 0 10px 10px 0;
        padding: 0.55rem 0.75rem;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 0 0.15rem rgba(62, 119, 248, 0.25);
        border-color: #3e77f8;
    }

    .btn-main {
        min-width: 170px;
    }

    @@media (max-width: 576px) {
        .title-edit {
            font-size: 1.25rem;
        }
    }
</style>
