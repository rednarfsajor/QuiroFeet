@model Analisis.BD.Clientes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Registrar Cliente";
}

<div class="container my-5" style="max-width: 640px; font-family: 'Poppins', sans-serif;">

    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h2 class="fw-bold" style="color:#234449;">
            <i class="bi bi-person-fill-add me-2"></i> Registrar cliente
        </h2>
        <p class="text-muted" style="color:#54717a !important;">
            Complete la información del cliente para registrarlo en el sistema.
        </p>
    </div>

    <div class="card shadow-sm border-0" style="border-radius:20px; background:#f7fafd;">
        <div class="card-body p-4 p-md-5">

            @using (Html.BeginForm("CreateClient", "Clientes", FormMethod.Post, new { @class = "needs-validation" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger small mb-3" })

                <!-- Nombre -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.nombre, "Nombre", new { @class = "form-label fw-semibold", style = "color:#234449;" })
                    <div class="input-group">
                        <span class="input-group-text bg-input">
                            <i class="bi bi-person-fill"></i>
                        </span>
                        @Html.TextBoxFor(m => m.nombre, new
                        {
                            @class = "form-control input-qui",
                            placeholder = "Nombre completo",
                            required = "required",
                            autocomplete = "off"
                        })
                    </div>
                    @Html.ValidationMessageFor(m => m.nombre, "", new { @class = "text-danger small" })
                </div>

                <!-- Cédula -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.cedula, "Cédula", new { @class = "form-label fw-semibold", style = "color:#234449;" })
                    <div class="input-group">
                        <span class="input-group-text bg-input">
                            <i class="bi bi-credit-card-2-front"></i>
                        </span>
                        @Html.TextBoxFor(m => m.cedula, new
                        {
                            @class = "form-control input-qui",
                            placeholder = "Ej: 1-2345-6789",
                            required = "required",
                            autocomplete = "off"
                        })
                    </div>
                    @Html.ValidationMessageFor(m => m.cedula, "", new { @class = "text-danger small" })
                </div>

                <!-- Correo -->
                <div class="mb-3">
                    @Html.LabelFor(m => m.correo, "Correo electrónico", new { @class = "form-label fw-semibold", style = "color:#234449;" })
                    <div class="input-group">
                        <span class="input-group-text bg-input">
                            <i class="bi bi-envelope-fill"></i>
                        </span>
                        @Html.TextBoxFor(m => m.correo, new
                        {
                            @class = "form-control input-qui",
                            placeholder = "correo@ejemplo.com",
                            type = "email",
                            required = "required",
                            autocomplete = "off"
                        })
                    </div>
                    @Html.ValidationMessageFor(m => m.correo, "", new { @class = "text-danger small" })
                </div>

                <!-- Teléfono -->
                <div class="mb-1">
                    @Html.LabelFor(m => m.telefono, "Teléfono", new { @class = "form-label fw-semibold", style = "color:#234449;" })
                    <div class="input-group">
                        <span class="input-group-text bg-input">
                            <i class="bi bi-telephone-fill"></i>
                        </span>
                        @Html.TextBoxFor(m => m.telefono, new
                        {
                            @class = "form-control input-qui",
                            placeholder = "Ej: 88888888",
                            pattern = "\\d{8}",
                            title = "Debe tener 8 dígitos numéricos",
                            type = "tel",
                            required = "required",
                            autocomplete = "off"
                        })
                    </div>
                    @Html.ValidationMessageFor(m => m.telefono, "", new { @class = "text-danger small" })
                </div>
                <p class="text-muted small mt-0">
                    El número debe contener exactamente 8 dígitos.
                </p>

                <!-- Botones -->
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-stretch mt-4 gap-2">
                    <a href="@Url.Action("ClientIndex", "Clientes")"
                       class="btn btn-cancel px-4 py-2 rounded-3 text-center">
                        <i class="bi bi-arrow-left-circle me-2"></i> Cancelar
                    </a>

                    <button type="submit"
                            class="btn btn-register px-4 py-2 rounded-3 text-center">
                        <i class="bi bi-check-circle-fill me-2"></i> Registrar cliente
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-input {
        background-color: #e6eef2 !important;
        border: 1px solid #d0dce4;
        color: #234449;
    }

    .input-group-text i {
        font-size: 1.2rem;
    }

    .input-qui {
        border: 1px solid #c7d4dd !important;
        background-color: #fcfeff !important;
        font-size: 0.95rem;
    }

    .input-qui:focus {
        border-color: #3e77f8 !important;
        box-shadow: 0 0 6px rgba(62, 119, 248, 0.35) !important;
    }

    .btn-register {
        background-color: #3e77f8 !important;
        color: #ffffff !important;
        font-weight: 600;
        border: none;
        box-shadow: 0 4px 10px rgba(62, 119, 248, 0.35);
    }

    .btn-register:hover {
        background-color: #234449 !important;
        box-shadow: 0 4px 12px rgba(35, 68, 73, 0.45);
    }

    .btn-cancel {
        background-color: #dce6ea !important;
        color: #234449 !important;
        border: 1px solid #bfcbd3;
        font-weight: 500;
    }

    .btn-cancel:hover {
        background-color: #c9d5db !important;
        color: #234449 !important;
    }

    @@media (max-width: 576px) {
        h2 {
            font-size: 1.4rem;
        }
    }
</style>
