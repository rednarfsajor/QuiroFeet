@model Analisis.BD.Ventas

@{
    ViewBag.Title = "Editar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="edit-sale-container">
    <div class="edit-sale-header">
        <div>
            <h1><i class="bi bi-pencil-square"></i> Editar Venta</h1>
            <p>Actualice la información de la venta seleccionada y guarde los cambios.</p>
        </div>
        <div class="edit-sale-badge">
            <i class="bi bi-receipt"></i> Detalle de venta #@Model.id
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)

        <div class="form-grid">
            <!-- Cliente -->
            <div class="form-group">
                <label class="form-label" for="id_cliente">
                    <i class="bi bi-person-fill"></i> Cliente
                </label>
                @Html.DropDownList(
                    "id_cliente",
                    ViewBag.Clientes as SelectList,
                    "-- Seleccione un cliente --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(model => model.id_cliente, "", new { @class = "text-danger" })
            </div>

            <!-- Detalle -->
            <div class="form-group">
                <label class="form-label" for="detalle">
                    <i class="bi bi-card-text"></i> Detalle de la venta
                </label>
                @Html.TextBoxFor(model => model.detalle, new { @class = "form-control", placeholder = "Descripción breve de la venta" })
                @Html.ValidationMessageFor(model => model.detalle, "", new { @class = "text-danger" })
            </div>

            <!-- Monto -->
            <div class="form-group">
                <label class="form-label" for="monto">
                    <i class="bi bi-cash-coin"></i> Monto
                </label>
                @Html.TextBoxFor(
                    model => model.monto,
                    new { @class = "form-control", type = "number", step = "0.01", min = "0", placeholder = "0.00" }
                )
                @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
            </div>

            <!-- Fecha -->
            <div class="form-group">
                <label class="form-label" for="fecha">
                    <i class="bi bi-calendar-event"></i> Fecha y hora
                </label>
                @Html.TextBoxFor(
                    model => model.fecha,
                    "{0:yyyy-MM-ddTHH:mm}",
                    new { @class = "form-control", type = "datetime-local" }
                )
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>

            <!-- Servicio (si aplica) -->
            <div class="form-group">
                <label class="form-label" for="servicio">
                    <i class="bi bi-person-workspace"></i> Servicio (opcional)
                </label>
                @Html.TextBoxFor(model => model.servicio, new { @class = "form-control", placeholder = "Nombre del servicio (si aplica)" })
                @Html.ValidationMessageFor(model => model.servicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="actions">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Guardar cambios
            </button>
            @Html.ActionLink("Volver a la lista", "ListSales", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    .edit-sale-container {
        max-width: 900px;
        margin: 60px auto;
        background-color: #ffffff;
        padding: 32px 36px;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        color: #234449;
    }

    .edit-sale-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 16px;
        margin-bottom: 24px;
    }

    .edit-sale-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .edit-sale-header h1 i {
        font-size: 1.8rem;
    }

    .edit-sale-header p {
        font-size: 0.95rem;
        color: #555;
        margin: 0;
    }

    .edit-sale-badge {
        background: #fff4e5;
        color: #9a5b16;
        padding: 8px 16px;
        border-radius: 999px;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 18px 22px;
        margin-top: 10px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
        color: #234449;
        font-size: 0.93rem;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-control {
        width: 100%;
        padding: 9px 11px;
        font-size: 0.95rem;
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #234449;
        box-shadow: 0 0 0 3px rgba(35, 68, 73, 0.15);
    }

    .text-danger {
        font-size: 0.8rem;
        margin-top: 3px;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 14px;
        margin-top: 24px;
    }

    .btn {
        padding: 10px 22px;
        font-size: 0.95rem;
        border-radius: 999px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: background-color 0.2s ease, box-shadow 0.2s ease, transform 0.1s ease;
        color: #fff;
    }

    .btn-primary {
        background-color: #234449;
    }

    .btn-primary:hover {
        background-color: #2d5760;
        box-shadow: 0 6px 16px rgba(35, 68, 73, 0.25);
        transform: translateY(-1px);
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        box-shadow: 0 4px 12px rgba(92, 99, 106, 0.3);
        transform: translateY(-1px);
    }

    @@media (max-width: 768px) {
        .edit-sale-container {
            margin: 30px 16px;
            padding: 22px 20px;
        }

        .edit-sale-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .form-grid {
            grid-template-columns: 1fr;
        }

        .actions {
            flex-direction: column-reverse;
            align-items: stretch;
        }

        .actions .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>
