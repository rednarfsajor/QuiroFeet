@model List<Analisis.BD.Ventas>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lista de Recibos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<div class="receipts-wrapper">

    <div class="header-block">
        <h1><i class="bi bi-receipt-cutoff"></i> Lista de Recibos</h1>
        <p class="subtitle">Historial completo de recibos registrados en el sistema.</p>
    </div>

    <div class="table-card">
        <table class="modern-table">
            <thead>
                <tr>
                    <th># Recibo</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Monto</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var receipt in Model)
                    {
                        var isAnulado = receipt.Estado == "Anulado";
                        <tr>
                            <td><strong>@receipt.NumeroRecibo</strong></td>

                            <td>@(receipt.Clientes != null ? receipt.Clientes.nombre : "Sin nombre")</td>

                            <td>@(receipt.fecha?.ToString("dd/MM/yyyy hh:mm tt") ?? "Sin fecha")</td>

                            <td>₡@string.Format("{0:N2}", receipt.monto)</td>

                            <td>
                                @if (isAnulado)
                                {
                                    <span class="badge badge-red"><i class="bi bi-x-circle"></i> Anulado</span>
                                }
                                else
                                {
                                    <span class="badge badge-green"><i class="bi bi-check-circle"></i> Activo</span>
                                }
                            </td>

                            <td class="actions-cell">
                                <a href="@Url.Action("Details", "Recibos", new { id = receipt.id })"
                                   class="btn-action btn-view">
                                    <i class="bi bi-eye"></i> Ver
                                </a>

                                @if (!isAnulado)
                                {
                                    <button type="button" class="btn-action btn-delete" onclick="anularRecibo(@receipt.id)">
                                        <i class="bi bi-x-octagon"></i> Anular
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="empty-row">No hay recibos registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script>
        function anularRecibo(id) {
            Swal.fire({
                title: '¿Deseas anular este recibo?',
                text: "Esta acción no se puede revertir.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Sí, anular',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (!result.isConfirmed) return;

                $.ajax({
                    url: '/Recibos/Anular/' + id,
                    type: 'POST',
                    success: function (data) {
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: '¡Recibo anulado!',
                                showConfirmButton: false,
                                timer: 1400
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Error', 'No se pudo anular el recibo.', 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Ocurrió un error al procesar la solicitud.', 'error');
                    }
                });
            });
        }
    </script>
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f3f5f7;
    }

    /* WRAPPER */
    .receipts-wrapper {
        max-width: 1100px;
        margin: 50px auto;
        padding: 0 20px;
    }

    /* HEADER */
    .header-block h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #234449;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .subtitle {
        color: #6b7280;
        margin-top: 4px;
        font-size: 0.95rem;
    }

    /* CARD */
    .table-card {
        margin-top: 25px;
        background: white;
        padding: 25px;
        border-radius: 16px;
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.08);
    }

    /* TABLE */
    .modern-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.92rem;
    }

        .modern-table thead tr {
            background: #234449;
            color: white;
        }

        .modern-table th, .modern-table td {
            padding: 12px 14px;
            text-align: center;
            border-bottom: 1px solid #e5e7eb;
        }

        .modern-table tbody tr:hover {
            background: #f9fafb;
        }

    .empty-row {
        padding: 20px;
        color: #6b7280;
        font-style: italic;
    }

    /* BADGES */
    .badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .badge-red {
        background: rgba(231, 76, 60, 0.12);
        color: #c0392b;
    }

    .badge-green {
        background: rgba(46, 204, 113, 0.12);
        color: #1a7f4f;
    }

    /* ACTION BUTTONS */
    .actions-cell {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

    .btn-action {
        padding: 8px 14px;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 600;
        border: none;
        text-decoration: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: 0.2s ease;
        color: #ffffff;
    }

    .btn-view {
        background: #17a2b8;
    }

        .btn-view:hover {
            background: #138496;
        }

    .btn-delete {
        background: #dc3545;
    }

        .btn-delete:hover {
            background: #c82333;
        }
</style>
